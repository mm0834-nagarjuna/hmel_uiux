<mvc:View
    controllerName="apprisal.controller.Ack"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt"
    xmlns:l="sap.ui.layout"
    height="90%"
>
    <uxap:ObjectPageLayout
        upperCaseAnchorBar="false"
        showFooter="true"
    >
        <uxap:layoutData>
            <FlexItemData growFactor="1" />
        </uxap:layoutData>
        <uxap:sections>
            <uxap:ObjectPageSection
                titleUppercase="false"
                showTitle="false"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        title="Acknowledgement"
                        titleUppercase="false"
                        visible="{apprisalData>ackTSC}"
                    >
                            <!-- Table -->

                            <Table
                                id="AckTable"
                                items="{
									path : 'PreDefineGoal>/Acknowledgements',	
									templateShareable: false
									
								}"
                                class="sapUiSmallMarginBottom"
                            >
                                <columns>
                                    <Column>
                                        <header>
                                            <Text text="" />
                                        </header>
                                    </Column>
                                    <Column>
                                        <header>
                                            <Text
                                                text="Are you satisfied with the discussion ?"
                                            />
                                        </header>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem vAlign="Top">
                                        <cells>
                                            <Text
                                                text="{PreDefineGoal>Stage}"
                                                width="100%"
                                            />
                                            <ComboBox
                                                selectedKey="Yes"
                                                width="100px"
                                                editable="{PreDefineGoal>Editable}"
                                            >
                                                <core:Item
                                                    key="Yes"
                                                    text="Yes"
                                                />
                                                <core:Item
                                                    key="No"
                                                    text="No"
                                                />
                                            </ComboBox>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>

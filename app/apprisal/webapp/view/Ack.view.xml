<mvc:View
    controllerName="apprisal.controller.Ig"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt"
    xmlns:l="sap.ui.layout"
    height="90%"
>
    <uxap:ObjectPageLayout
        upperCaseAnchorBar="false"
        showFooter="true"
    >
        <uxap:layoutData>
            <FlexItemData growFactor="1" />
        </uxap:layoutData>
        <uxap:sections>
            <uxap:ObjectPageSection
                titleUppercase="false"
                title="1"
                showTitle="false"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection titleUppercase="false">
                        <VBox>
                            <List
                                items="{PreDefineGoal>/Acknowledgements}"
                                inset="false"
                                showSeparators="None"
                            >
                                <CustomListItem>
                                    <VBox class="sapUiSmallMarginBottom">
                                        <OverflowToolbar>
                                            <Title text="{PreDefineGoal>Sno} . {PreDefineGoal>Stage}" />
                                            <ToolbarSpacer />
                                        </OverflowToolbar>
                                        <HBox alignItems="Center">
                                            <Label
                                                text="Are you satisfied with the discussion ?"
                                            />
                                            <MenuButton
                                                text="{PreDefineGoal>Status}"
                                                buttonMode="Split"
                                                defaultAction="onDefaultAction"
                                                beforeMenuOpen="onBeforeMenuOpen"
                                            >
                                                <menu>
                                                    <Menu itemSelected="onMenuAction">
                                                        <MenuItem text="Yes" />
                                                        <MenuItem text="No" />
                                                    </Menu>
                                                </menu>
                                            </MenuButton>
                                        </HBox>
                                    </VBox>
                                </CustomListItem>
                            </List>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>

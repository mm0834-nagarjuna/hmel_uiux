<mvc:View
    controllerName="apprisal.controller.Ack"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt"
    xmlns:l="sap.ui.layout"
    height="90%"
>
    <uxap:ObjectPageLayout
        upperCaseAnchorBar="false"
        showFooter="true"
    >
        <uxap:layoutData>
            <FlexItemData growFactor="1" />
        </uxap:layoutData>
        <uxap:sections>
            <!-- Target Setting -->

            <uxap:ObjectPageSection
                titleUppercase="false"
                title="Target Setting"
                showTitle="false"
                visible="{apprisalData>ackTSC}"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection titleUppercase="false">
                        <VBox width="80%">
                            <OverflowToolbar style="Clear">
                                <Title text="Target Setting" />
                            </OverflowToolbar>
                            <HBox alignItems="Center" justifyContent="SpaceBetween">
                                <Label
                                    text="Are you satisfied with the overall discussion?"
                                    class="sapUiSmallMarginEnd"
                                />
                                <ComboBox
                                    selectedKey="Yes"
                                    width="100px"
                                    editable="{apprisalData>ackTSCEdit}"
                                >
                                    <core:Item
                                        key="Yes"
                                        text="Yes"
                                    />
                                    <core:Item
                                        key="No"
                                        text="No"
                                    />
                                </ComboBox>
                            </HBox>
                            <HBox alignItems="Center" justifyContent="SpaceBetween">
                                <Label
                                    text="Are you clear regarding what is expected from you in this FY?"
                                    class="sapUiSmallMarginEnd"
                                />
                                <ComboBox
                                    selectedKey="Yes"
                                    width="100px"
                                    editable="{apprisalData>ackTSCEdit}"
                                >
                                    <core:Item
                                        key="Yes"
                                        text="Yes"
                                    />
                                    <core:Item
                                        key="No"
                                        text="No"
                                    />
                                </ComboBox>
                            </HBox>
                            <HBox alignItems="Center" justifyContent="SpaceBetween">
                                <Label
                                    text="Do you understand how your goals are aligned to the overall organizational goals?"
                                    class="sapUiSmallMarginEnd"
                                />
                                <ComboBox
                                    selectedKey="Yes"
                                    width="100px"
                                    editable="{apprisalData>ackTSCEdit}"
                                >
                                    <core:Item
                                        key="Yes"
                                        text="Yes"
                                    />
                                    <core:Item
                                        key="No"
                                        text="No"
                                    />
                                </ComboBox>
                            </HBox>
                            <HBox alignItems="Center" justifyContent="SpaceBetween">
                                <Label
                                    text="Did your appraiser discuss a plan to achieve the IDP?"
                                    class="sapUiSmallMarginEnd"
                                />
                                <ComboBox
                                    selectedKey="Yes"
                                    width="100px"
                                    editable="{apprisalData>ackTSCEdit}"
                                >
                                    <core:Item
                                        key="Yes"
                                        text="Yes"
                                    />
                                    <core:Item
                                        key="No"
                                        text="No"
                                    />
                                </ComboBox>
                            </HBox>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

<!-- First Four Monthly -->

            <uxap:ObjectPageSection
                titleUppercase="false"
                title="First Four Monthly"
                showTitle="false"
                visible="{apprisalData>ackFFMC}"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection titleUppercase="false">
                        <VBox width="80%">
                            <OverflowToolbar style="Clear">
                                <Title text="First Four Monthly" />
                            </OverflowToolbar>
                            <HBox alignItems="Center" justifyContent="SpaceBetween" >
                                <Label
                                    text="Are you satisfied with the overall discussion?"
                                    class="sapUiSmallMarginEnd"
                                />
                                <ComboBox
                                    selectedKey="Yes"
                                    width="100px"
                                    editable="{apprisalData>ackFFMCEdit}"
                                >
                                    <core:Item
                                        key="Yes"
                                        text="Yes"
                                    />
                                    <core:Item
                                        key="No"
                                        text="No"
                                    />
                                </ComboBox>
                            </HBox>
                            <HBox alignItems="Center" justifyContent="SpaceBetween">
                                <Label
                                    text="Has your Individual Development Plan (Plan vs Actual development Needs) been discussed?"
                                    class="sapUiSmallMarginEnd"
                                />
                                <ComboBox
                                    selectedKey="Yes"
                                    width="100px"
                                    editable="{apprisalData>ackFFMCEdit}"
                                >
                                    <core:Item
                                        key="Yes"
                                        text="Yes"
                                    />
                                    <core:Item
                                        key="No"
                                        text="No"
                                    />
                                </ComboBox>
                            </HBox>
                            <HBox alignItems="Center" justifyContent="SpaceBetween">
                                <Label
                                    text="How do you feel about the performance feedback received from your appraiser?"
                                    class="sapUiSmallMarginEnd"
                                />
                                <ComboBox
                                    selectedKey="Non-Developmental Feedback"
                                    editable="{apprisalData>ackFFMCEdit}"
                                    width="240px"
                                >
                                    <core:Item
                                        key="Developmental Feedback"
                                        text="Developmental Feedback"
                                    />
                                    <core:Item
                                        key="Non-Developmental Feedback"
                                        text="Non-Developmental Feedback"
                                    />
                                </ComboBox>
                            </HBox>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

<!-- Second Four Monthly -->

            <uxap:ObjectPageSection
                titleUppercase="false"
                title="Second Four Monthly"
                showTitle="false"

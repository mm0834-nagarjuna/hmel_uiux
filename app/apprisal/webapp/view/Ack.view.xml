                        <VBox width="80%">
                            <OverflowToolbar style="Clear">
                                <Title text="Second Four Monthly" />
                            </OverflowToolbar>
                            <HBox alignItems="Center" justifyContent="SpaceBetween">
                                <Label
                                    text="Are you satisfied with the overall discussion?"
                                    class="sapUiSmallMarginEnd"
                                />
                                <ComboBox
                                    selectedKey="Yes"
                                    width="100px"
                                    editable="{apprisalData>ackSFMCEdit}"
                                >
                                    <core:Item
                                        key="Yes"
                                        text="Yes"
                                    />
                                    <core:Item
                                        key="No"
                                        text="No"
                                    />
                                </ComboBox>
                            </HBox>
                            <HBox alignItems="Center" justifyContent="SpaceBetween">
                                <Label
                                    text="Has your Individual Development Plan (Plan vs Actual development Needs) been discussed?"
                                    class="sapUiSmallMarginEnd"
                                />
                                <ComboBox
                                    selectedKey="Yes"
                                    width="100px"
                                    editable="{apprisalData>ackSFMCEdit}"
                                >
                                    <core:Item
                                        key="Yes"
                                        text="Yes"
                                    />
                                    <core:Item
                                        key="No"
                                        text="No"
                                    />
                                </ComboBox>
                            </HBox>
                            <HBox alignItems="Center" justifyContent="SpaceBetween">
                                <Label
                                    text="How do you feel about the performance feedback received from your appraiser?"
                                    class="sapUiSmallMarginEnd"
                                />
                                <ComboBox
                                width="240px"
                                    selectedKey="Developmental Feedback"
                                    editable="{apprisalData>ackSFMCEdit}"
                                >
                                    <core:Item
                                        key="Developmental Feedback"
                                        text="Developmental Feedback"
                                    />
                                    <core:Item
                                        key="Non-Developmental Feedback"
                                        text="Non-Developmental Feedback"
                                    />
                                </ComboBox>
                            </HBox>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

<!-- Year End Review -->

            <uxap:ObjectPageSection
                titleUppercase="false"
                title="Year End Review"
                showTitle="false"
                visible="{apprisalData>ackANC}"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection titleUppercase="false">
                        <VBox width="80%">
                            <OverflowToolbar style="Clear">
                                <Title text="Year End Review" />
                            </OverflowToolbar>
                            <HBox alignItems="Center" justifyContent="SpaceBetween">
                                <Label
                                    text="Are you satisfied with the overall discussion?"
                                    class="sapUiSmallMarginEnd"
                                />
                                <ComboBox
                                    selectedKey="Yes"
                                    width="100px"
                                    editable="{apprisalData>ackANCEdit}"
                                >
                                    <core:Item
                                        key="Yes"
                                        text="Yes"
                                    />
                                    <core:Item
                                        key="No"
                                        text="No"
                                    />
                                </ComboBox>
                            </HBox>
                            <HBox alignItems="Center" justifyContent="SpaceBetween">
                                <Label
                                    text="Has your Individual Development Plan (Plan vs Actual development Needs) been discussed?"
                                    class="sapUiSmallMarginEnd"
                                />
                                <ComboBox
                                    selectedKey="Yes"
                                    width="100px"
                                    editable="{apprisalData>ackANCEdit}"
                                >
                                    <core:Item
                                        key="Yes"
                                        text="Yes"
                                    />
                                    <core:Item
                                        key="No"
                                        text="No"
                                    />
                                </ComboBox>
                            </HBox>
                            <HBox alignItems="Center" justifyContent="SpaceBetween">
                                <Label
                                    text="How do you feel about the performance feedback received from your appraiser?"
                                    class="sapUiSmallMarginEnd"
                                />
                                <ComboBox
                                    selectedKey="Developmental Feedback"
                                    editable="{apprisalData>ackANCEdit}"
                                    width="240px"
                                >
                                    <core:Item
                                        key="Developmental Feedback"
                                        text="Developmental Feedback"
                                    />
                                    <core:Item
                                        key="Non-Developmental Feedback"
                                        text="Non-Developmental Feedback"
                                    />
                                </ComboBox>
                            </HBox>
                            <HBox alignItems="Center" justifyContent="SpaceBetween">
                                <Label
                                    text="How often your appraiser shares ongoing feedback about your performance?"
                                    class="sapUiSmallMarginEnd"
                                />
                                <ComboBox
                                    selectedKey="Ongoing"
                                    editable="{apprisalData>ackANCEdit}"
                                >
                                    <core:Item
                                        key="Ongoing"
                                        text="Ongoing"
                                    />
                                    <core:Item
                                        key="Monthly"
                                        text="Monthly"
                                    />
                                    <core:Item
                                        key="During Four monthly review"
                                        text="During Four monthly review"
                                    />
                                    <core:Item
                                        key="During Year End Review"
                                        text="During Year End Review"
                                    />
                                </ComboBox>
                            </HBox>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>

<mvc:View
    controllerName="apprisal.controller.Ig"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt"
    xmlns:l="sap.ui.layout"
    height="90%"
>
    <uxap:ObjectPageLayout
        upperCaseAnchorBar="false"
        showFooter="true"
    >
        <uxap:layoutData>
            <FlexItemData growFactor="1" />
        </uxap:layoutData>
        <uxap:sections>
            <uxap:ObjectPageSection
                titleUppercase="false"
                showTitle="true"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        title="1 . Target Setting Confirmation By Appraisee"
                        titleUppercase="false"
                        visible="{apprisalData>ackTSC}"
                    >
                        <VBox class="sapUiSmallMarginBottom">
                            <HBox
                                alignItems="Center"
                                justifyContent="Start"
                            >
                                <Label
                                    text="Are you satisfied with the discussion ?"
                                />
                                <Select selectedKey="{PreDefineGoal>Status}" editable="{apprisalData>ackTSCEdit}">
                        <items>
                            <core:Item key="Yes" text="Yes" />
                            <core:Item key="No" text="No" />
                        </items>
                    </Select>
                            </HBox>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>

                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        title="2 . First Four Monthly Confirmation By Appraisee"
                        titleUppercase="false"
                        visible="{apprisalData>ackFFMC}"
                    >
                        <VBox class="sapUiSmallMarginBottom">
                            <HBox
                                alignItems="Center"
                                justifyContent="Start"
                            >
                                <Label
                                    text="Are you satisfied with the discussion ?"
                                />
                                <Select selectedKey="{PreDefineGoal>Status}" editable="{apprisalData>ackFFMCEdit}">
                        <items>
                            <core:Item key="Yes" text="Yes" />
                            <core:Item key="No" text="No" />
                        </items>
                    </Select>
                            </HBox>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>

                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        title="3 . Second Four Monthly Confirmation By Appraisee"
                        titleUppercase="false"
                        visible="{apprisalData>ackSFMC}"
                    >
                        <VBox class="sapUiSmallMarginBottom">
                            <HBox
                                alignItems="Center"
                                justifyContent="Start"
                            >
                                <Label
                                    text="Are you satisfied with the discussion ?"
                                />
                                <Select selectedKey="{PreDefineGoal>Status}" editable="{apprisalData>ackSFMCEdit}">
                        <items>
                            <core:Item key="Yes" text="Yes" />
                            <core:Item key="No" text="No" />
                        </items>
                    </Select>
                            </HBox>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>

                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        title="4. Annual Confirmation By Appraisee"
                        titleUppercase="false"
                        visible="{apprisalData>ackANC}"
                    >
                        <VBox class="sapUiSmallMarginBottom">
                            <HBox
                                alignItems="Center"
                                justifyContent="Start"
                            >
                                <Label
                                    text="Are you satisfied with the discussion ?"
                                />
                                <Select selectedKey="{PreDefineGoal>Status}" editable="{apprisalData>ackANCEdit}">
                        <items>
                            <core:Item key="Yes" text="Yes" />
                            <core:Item key="No" text="No" />
                        </items>
                    </Select>
                            </HBox>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>

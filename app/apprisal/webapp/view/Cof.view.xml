                                width="100%"
                                value="{apprisalData>co_target_value}"
                                growing="true"
								class="sapUiSmallMarginBottom"
								editable="{apprisalData>co_target_edit}"
							/>
							<Label text="Annual Achievement : Appraisee" class="sapUiSmallMarginTop"/>
							<TextArea
                                width="100%"
                                value="{apprisalData>co_target_value}"
                                growing="true"
								class="sapUiSmallMarginBottom"
								editable="{apprisalData>co_target_edit}"
                            />
							<Label text="Annual Feedback : Appraiser" class="sapUiSmallMarginTop"/>
							<TextArea
                                width="100%"
                                value="{apprisalData>co_target_value}"
                                growing="true"
								class="sapUiSmallMarginBottom"
								editable="{apprisalData>co_target_edit}"
                            />
							<HBox alignItems="Center">
							<Label text="Score - Self Appraisal : Appraiser " />
							<ComboBox items="{/numbers}" value="3">
									<core:Item
                                        key="{key}"
                                        text="{text}"
                                    />
								</ComboBox>
								<Button icon="sap-icon://information" type="Transparent" press="onClickScoreInfo" ariaLabelledBy="actionButtonLabel"/>
							</HBox>

						</VBox>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
			<uxap:ObjectPageSection
                titleUppercase="false"
                title="2"
                showTitle="false"
            >
				<uxap:subSections>
					<uxap:ObjectPageSubSection titleUppercase="false">
						<VBox>
							<OverflowToolbar>
								<Title text="2 Key Performance Area"/>

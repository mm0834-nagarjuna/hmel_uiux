                                growing="true"
								class="sapUiSmallMarginBottom"
								editable="{apprisalData>co_ksp_edit}"
                            />
							<Label text="Key Performance Index"  class="sapUiSmallMarginTop"/>
							<TextArea
                                width="100%"
                                value="{apprisalData>co_kpi_value}"
                                growing="true"
								class="sapUiSmallMarginBottom"
								editable="{apprisalData>co_kpi_edit}"

                            />
							<Label text="Target" class="sapUiSmallMarginTop"/>
							<TextArea
                                width="100%"
                                value="{apprisalData>co_target_value}"
                                growing="true"
								class="sapUiSmallMarginBottom"
								editable="{apprisalData>co_target_edit}"

                            />
						</VBox>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
		</uxap:sections>
	</uxap:ObjectPageLayout>
</mvc:View>

<mvc:View
    controllerName="apprisal.controller.Cof"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt"
    xmlns:blockcolor="project1.SharedBlocks"
    xmlns:l="sap.ui.layout"
    xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    height="90%"
>
    <uxap:ObjectPageLayout
        upperCaseAnchorBar="false"
        showFooter="true"
    >
        <uxap:layoutData>
            <FlexItemData growFactor="1" />
        </uxap:layoutData>
        <uxap:sections>
            <uxap:ObjectPageSection visible="{= !${apprisalData>coFgKSPEdit} }">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        titleUppercase="false"
                        title="Common Organizational Goal"
                        visible="{= !${apprisalData>coFgKSPEdit} }"
                        class="mvnDummyEmptyObjectPageSubSection"
                    >
                        <HBox />
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection visible="{apprisalData>coFgKSPEdit}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        titleUppercase="false"
                        title="Common Organizational Goals"
                        visible="{apprisalData>coFgKSPEdit}"
                    >
                        <OverflowToolbar
                            class="mvnObjectPageLayoutTitleOverflowToolbar"
                        >
                            <ToolbarSpacer />
                            <Button
                                icon="sap-icon://copy"
                                text="Copy Goal"
                                type="Ghost"
                                press="onClickPredefined"
                            />
                            <Button
                                icon="sap-icon://create-form"
                                text="Add KPA"
                                type="Ghost"
                                press="onItemSelect"
                            />
                            <MenuButton
                                text="Upload/Download"
                                buttonMode="Split"
                                defaultAction="onDefaultAction"
                                beforeMenuOpen="onBeforeMenuOpen"
                            >
                                <menu>
                                    <Menu itemSelected="onMenuAction">
                                        <MenuItem
                                            text="Upload"
                                            icon="sap-icon://upload"
                                        />
                                        <MenuItem
                                            text="Download Template"
                                            icon="sap-icon://download"
                                        />
                                    </Menu>
                                </menu>
                            </MenuButton>
                        </OverflowToolbar>
                        <!-- <uxap:actions><Button icon="sap-icon://synchronize"/><Button icon="sap-icon://expand"/></uxap:actions> -->
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <uxap:ObjectPageSection
                title="1.1"
                showTitle="false"
             >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        titleUppercase="false"
                        title="1.1"
                    >
                        <VBox alignItems="Stretch">
                            <OverflowToolbar>
                                <Title text="1.1 Key Performance Area" />
                                <Button icon="sap-icon://delete" visible="{apprisalData>deleteKPA}"/>
                                <ToolbarSpacer />
                                
                            </OverflowToolbar>
                            <Tree
                                id="Tree4"
                                items="{myGoal>/COF/KSP002}"
                             >
                                <CustomTreeItem>
                                    <FlexBox
                                        alignItems="Center"
                                        width="100%"
                                        direction="Row"
                                        renderType="Bare"
                                        class="noGapBox"
                                    >
                                        <items>
                                            <VBox
                                                width="100%"
                                                visible="{= !${device>/browser/mobile} }"
                                            >
                                                <OverflowToolbar
                                                    style="Clear"
                                                    design="Transparent"
                                                    visible="{= ${myGoal>key} !== 'Weightage' }"
                                                >
                                                    <HBox
                                                        alignItems="Center"
                                                        justifyContent="SpaceBetween"
                                                        width="100%"
                                                    >
                                                        <Title
                                                            text="{myGoal>num} {myGoal>title}"
                                                            tooltip="{myGoal>title}"
                                                            visible="{parts: [{path:'myGoal>fieldVisible'}, {path:'myGoal>key'}], formatter: '.formatter.TAVisible'}"
                                                        />
                                                        <HBox
                                                            alignItems="Center"
                                                            justifyContent="End"
                                                        >
                                                            <Button
                                                                icon="{myGoal>addIcon}"
                                                                text="{myGoal>addText}"
                                                                custom:field="{myGoal>field}"
                                                                class="sapUiTinyMarginBegin sapUiTinyMarginEnd"
                                                                visible="{parts: [{path:'myGoal>addVisible'}], formatter: '.formatter.TAVisible'}"
                                                            />
                                                           
                                                            <Button
                                                                icon="sap-icon://add-employee"
                                                                text="Appraiser"
                                                                press="onClickAddAppraiser"
                                                                visible="{parts: [{path:'myGoal>addOtherAR'}], formatter: '.formatter.TAVisible'}"
                                                            />
                                                            <Button
                                                                icon="{myGoal>deleteIcon}"
                                                                press="handleButtonPress"
                                                                class="sapUiTinyMarginBegin sapUiTinyMarginEnd"
                                                                visible="{parts: [{path:'myGoal>deleteVisible'}], formatter: '.formatter.TAVisible'}"
                                                            />
                                                        </HBox>
                                                    </HBox>
                                                </OverflowToolbar>
                                                <TextArea
                                                    value="{myGoal>value}"
                                                    width="100%"
                                                    tooltip= "{path:'myGoal>key'}"
                                                    visible="{parts: [{path:'myGoal>fieldVisible'}, {path:'myGoal>key'}], formatter: '.formatter.TAVisible'}"
                                                    editable="{parts: [{path:'myGoal>fieldEdit'}], formatter: '.formatter.TAVisible'}"
                                                />
                                                <HBox
                                                    
                                                    alignItems="Center"
                                                    justifyContent="SpaceBetween"
                                                  visible="{= ${myGoal>key} === 'milestones' }"
                                                  >
                                                  <VBox >
                                                  <ObjectIdentifier title="First Four Monthly Milestones"></ObjectIdentifier>
                                                    <TextArea
                                                    value="{myGoal>value}"
                                                    width="auto"
                                                    tooltip= "{path:'myGoal>key'}"
                                                   rows="2"
                                                   cols="95"
                                                    editable="{parts: [{path:'myGoal>fieldEdit'}], formatter: '.formatter.TAVisible'}"

                                                />
                                                  </VBox>
                                                  <VBox width="50%" >
                                                  <ObjectIdentifier title="Second Four Monthly Milestones"></ObjectIdentifier>
                                                                 <TextArea
                                                    value="Second Four Monthly Milestones value"
                                                    width="auto"
                                                    tooltip= "{path:'myGoal>key'}"
                                                   rows="2"
                                                   cols="95"
                                                    editable="{parts: [{path:'myGoal>fieldEdit'}], formatter: '.formatter.TAVisible'}"
                                                />
                                                  </VBox>
                                                    
                                                </HBox>
                                               
                                                <HBox
                                                    width="100%"
                                                    alignItems="Center"
                                                    justifyContent="SpaceBetween"
                                                 >
                                                    <VBox
                                                        width="33%"
                                                        alignItems="Start"
                                                        justifyContent="Start"
                                                    >
                                                        <Label
                                                            text="Weightage (%): "
                                                            visible="{= ${myGoal>key} === 'Weightage' }"
                                                        />
                                                        
                                                        <ComboBox
                                                            id="weight"
                                                            value="{myGoal>value}"
                                                            visible="{= ${myGoal>key} === 'Weightage' }"
                                                            editable="{parts: [{path:'myGoal>fieldEdit'}], formatter: '.formatter.TAVisible'}"
                                                        />
                                                    </VBox>

                                                    <VBox
                                                        width="33%"
                                                        alignItems="Start"
                                                        justifyContent="Start"
                                                        visible="{parts: [{path:'myGoal>fieldVisible1'}], formatter: '.formatter.TAVisible'}"
                                                    >
                                                        <HBox width="auto" alignItems="Center">
                                                        <Label
                                                            text="Appraisee Score: "
                                                            visible="{parts: [{path:'myGoal>fieldVisible1'}], formatter: '.formatter.TAVisible'}"
                                                        />
                                                        <Button
                                                            icon="sap-icon://information"
                                                            type="Transparent"
                                                            press="onClickScoreInfo"
                                                            visible="{parts: [{path:'myGoal>fieldIconVisible1'}], formatter: '.formatter.TAVisible'}"
                                                            
                                                        />
                                                        
                                                        </HBox>
                                                        
                                                        <ComboBox
                                                            id="AESCR"
                                                            value="{myGoal>value1}"
                                                            visible="{parts: [{path:'myGoal>fieldVisible1'}], formatter: '.formatter.TAVisible'}"
                                                            editable="{parts: [{path:'myGoal>fieldEdit1'}], formatter: '.formatter.TAVisible'}"
                                                        />
                                                    </VBox>

                                                    <VBox
                                                        width="33%"
                                                        alignItems="Start"
                                                        justifyContent="Start"
                                                        visible="{parts: [{path:'myGoal>fieldVisible2'}], formatter: '.formatter.TAVisible'}"
                                                    >
                                                        <HBox width="auto" alignItems="Center">
                                                        <Label
                                                            text="Appraiser Score: "
                                                            visible="{parts: [{path:'myGoal>fieldVisible2'}], formatter: '.formatter.TAVisible'}"
                                                        />
                                                        <Button
                                                            icon="sap-icon://information"
                                                            type="Transparent"
                                                            press="onClickScoreInfo"
                                                            visible="{parts: [{path:'myGoal>fieldIconVisible2'}], formatter: '.formatter.TAVisible'}"
                                                            
                                                        />
                                                        </HBox>
                                                        <ComboBox
                                                            id="ARSCR"
                                                            value="{myGoal>value2}"
                                                            visible="{parts: [{path:'myGoal>fieldVisible2'}], formatter: '.formatter.TAVisible'}"
                                                            editable="{parts: [{path:'myGoal>fieldEdit2'}], formatter: '.formatter.TAVisible'}"
                                                        />
                                                    </VBox>
                                                </HBox>
                                            </VBox>
                                        </items>
                                    </FlexBox>
                                </CustomTreeItem>
                            </Tree>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

 <uxap:ObjectPageSection
                title="1.2"
                showTitle="false"
             >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        titleUppercase="false"
                        title="1.2"
                    >
                        <VBox alignItems="Stretch">
                            <OverflowToolbar>
                                <Title text="1.2 Key Performance Area" />
                                <Button icon="sap-icon://delete" visible="{apprisalData>deleteKPA}" />
                                <ToolbarSpacer />
                                
                            </OverflowToolbar>
                            <Tree
                                id="Tree3"
                                items="{myGoal>/COF/KSP001}"
                             >
                                <CustomTreeItem>
                                    <FlexBox
                                        alignItems="Center"
                                        width="100%"
                                        direction="Row"
                                        renderType="Bare"
                                        class="noGapBox"
                                    >
                                        <items>
                                            <VBox
                                                width="100%"
                                                visible="{= !${device>/browser/mobile} }"
                                            >
                                                <OverflowToolbar
                                                    style="Clear"
                                                    design="Transparent"
                                                    visible="{= ${myGoal>key} !== 'Weightage' }"
                                                >
                                                    <HBox
                                                        alignItems="Center"
                                                        justifyContent="SpaceBetween"
                                                        width="100%"
                                                    >
                                                        <Title
                                                            text="{myGoal>num} {myGoal>title}"
                                                            tooltip="{myGoal>title}"
                                                            visible="{parts: [{path:'myGoal>fieldVisible'}], formatter: '.formatter.TAVisible'}"
                                                        />
                                                        <HBox
                                                            alignItems="Center"
                                                            justifyContent="End"
                                                        >
                                                            <Button
                                                                icon="{myGoal>addIcon}"
                                                                text="{myGoal>addText}"
                                                                custom:field="{myGoal>field}"
                                                                class="sapUiTinyMarginBegin sapUiTinyMarginEnd"
                                                                visible="{parts: [{path:'myGoal>addVisible'}], formatter: '.formatter.TAVisible'}"
                                                            />
                                                           
                                                            <Button
                                                                icon="sap-icon://add-employee"
                                                                text="Appraiser"
                                                                press="onClickAddAppraiser"
                                                                visible="{parts: [{path:'myGoal>addOtherAR'}], formatter: '.formatter.TAVisible'}"
                                                            />
                                                            <Button
                                                                icon="{myGoal>deleteIcon}"
                                                                press="handleButtonPress"
                                                                class="sapUiTinyMarginBegin sapUiTinyMarginEnd"
                                                                visible="{parts: [{path:'myGoal>deleteVisible'}], formatter: '.formatter.TAVisible'}"
                                                            />
                                                        </HBox>
                                                    </HBox>
                                                </OverflowToolbar>
                                                <TextArea
                                                    value="{myGoal>value}"
                                                    width="100%"
                                                    visible="{parts: [{path:'myGoal>fieldVisible'}, {path:'myGoal>key'}], formatter: '.formatter.TAVisible'}"
                                                    editable="{parts: [{path:'myGoal>fieldEdit'}], formatter: '.formatter.TAVisible'}"
                                                />
                                                <HBox
                                                    width="100%"
                                                    alignItems="Center"
                                                    justifyContent="SpaceBetween"
                                                 >
                                                    <VBox
                                                        width="33%"
                                                        alignItems="Start"
                                                        justifyContent="Start"
                                                    >
                                                        <Label
                                                            text="Weightage (%): "
                                                            visible="{= ${myGoal>key} === 'Weightage' }"
                                                        />
                                                        
                                                        <ComboBox
                                                            id="1weight"
                                                            value="{myGoal>value}"
                                                            visible="{= ${myGoal>key} === 'Weightage' }"
                                                            editable="{parts: [{path:'myGoal>fieldEdit'}], formatter: '.formatter.TAVisible'}"
                                                        />
                                                    </VBox>

                                                    <VBox
                                                        width="33%"
                                                        alignItems="Start"
                                                        justifyContent="Start"
                                                        visible="{parts: [{path:'myGoal>fieldVisible1'}], formatter: '.formatter.TAVisible'}"
                                                    >
                                                        <HBox width="auto" alignItems="Center">
                                                        <Label
                                                            text="Appraisee Score: "
                                                            visible="{parts: [{path:'myGoal>fieldVisible1'}], formatter: '.formatter.TAVisible'}"
                                                        />
                                                        <Button
                                                            icon="sap-icon://information"
                                                            type="Transparent"
                                                            press="onClickScoreInfo"
                                                            visible="{parts: [{path:'myGoal>fieldIconVisible1'}], formatter: '.formatter.TAVisible'}"
                                                            
                                                        />
                                                        
                                                        </HBox>
                                                        
                                                        <ComboBox
                                                            id="1AESCR"
                                                            value="{myGoal>value1}"
                                                            visible="{parts: [{path:'myGoal>fieldVisible1'}], formatter: '.formatter.TAVisible'}"
                                                            editable="{parts: [{path:'myGoal>fieldEdit1'}], formatter: '.formatter.TAVisible'}"
                                                        />
                                                    </VBox>

                                                    <VBox
                                                        width="33%"
                                                        alignItems="Start"
                                                        justifyContent="Start"
                                                        visible="{parts: [{path:'myGoal>fieldVisible2'}], formatter: '.formatter.TAVisible'}"
                                                    >
                                                        <HBox width="auto" alignItems="Center">
                                                        <Label
                                                            text="Appraiser Score: "
                                                            visible="{parts: [{path:'myGoal>fieldVisible2'}], formatter: '.formatter.TAVisible'}"
                                                        />
                                                        <Button
                                                            icon="sap-icon://information"
                                                            type="Transparent"
                                                            press="onClickScoreInfo"
                                                            visible="{parts: [{path:'myGoal>fieldIconVisible2'}], formatter: '.formatter.TAVisible'}"
                                                            
                                                        />
                                                        </HBox>
                                                        <ComboBox
                                                            id="1ARSCR"
                                                            value="{myGoal>value2}"
                                                            visible="{parts: [{path:'myGoal>fieldVisible2'}], formatter: '.formatter.TAVisible'}"
                                                            editable="{parts: [{path:'myGoal>fieldEdit2'}], formatter: '.formatter.TAVisible'}"
                                                        />
                                                    </VBox>
                                                </HBox>
                                            </VBox>
                                        </items>
                                    </FlexBox>
                                </CustomTreeItem>
                            </Tree>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
           
        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>

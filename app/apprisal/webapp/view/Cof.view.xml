                                                            editable="{parts: [{path:'myGoal>fieldEdit2'}], formatter: '.formatter.TAVisible'}"
                                                        />
                                                    </HBox>
                                                </HBox>
                                            </VBox>
                                        </items>
                                    </FlexBox>
                                </CustomTreeItem>
                            </Tree>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>


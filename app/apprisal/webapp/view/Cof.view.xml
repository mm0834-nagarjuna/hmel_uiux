        </uxap:layoutData>
        <uxap:sections>
            <uxap:ObjectPageSection>
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        titleUppercase="false"
                        title="Common Organizational"
                    >
                        <OverflowToolbar
                            class="mvnObjectPageLayoutTitleOverflowToolbar"
                        >
                            <ToolbarSpacer />
                            <Button
                                text="Predefined"
                                type="Ghost"
                                press="onClickPredefined"
                                visible="{apprisalData>coFgKSPEdit}"
                            />
                            <Button
                                text="New"
                                type="Ghost"
                                press="onItemSelect"
                                visible="{apprisalData>coFgKSPEdit}"
                            />
                            <MenuButton
                                text="Upload/Download"
                                buttonMode="Split"
                                defaultAction="onDefaultAction"
                                beforeMenuOpen="onBeforeMenuOpen"
                                visible="{apprisalData>coFgKSPEdit}"
                            >
                                <menu>
                                    <Menu itemSelected="onMenuAction">
                                        <MenuItem
                                            text="Upload"
                                            icon="sap-icon://upload"
                                        />
                                        <MenuItem
                                            text="Download Template"
                                            icon="sap-icon://download"
                                        />
                                    </Menu>
                                </menu>
                            </MenuButton>
                        </OverflowToolbar>
                        <!-- <uxap:actions><Button icon="sap-icon://synchronize"/><Button icon="sap-icon://expand"/></uxap:actions> -->
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

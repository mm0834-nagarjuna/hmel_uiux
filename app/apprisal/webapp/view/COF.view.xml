								class="sapUiSmallMarginBottom"
								editable="{apprisalData>ksp_edit}"
                            />
                            <Label text="Key Performance Index"  class="sapUiSmallMarginTop"/>
                            <TextArea
                                width="100%"
                                value="{apprisalData>kpi_value}"
                                growing="true"
								class="sapUiSmallMarginBottom"
								editable="{apprisalData>kpi_edit}"

                            />
                            <Label text="Target" class="sapUiSmallMarginTop"/>
                            <TextArea
                                width="100%"
                                value="{apprisalData>target_value}"
                                growing="true"
								class="sapUiSmallMarginBottom"
								editable="{apprisalData>target_edit}"

                            />
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>

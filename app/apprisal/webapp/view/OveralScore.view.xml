<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="apprisal.controller.OveralScore"
    xmlns:uxap="sap.uxap"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    height="90%"
>
    <uxap:ObjectPageLayout upperCaseAnchorBar="false">
        <uxap:layoutData>
            <FlexItemData growFactor="1" />
        </uxap:layoutData>
        <uxap:sections>
            <uxap:ObjectPageSection
                titleUppercase="false"
                title="Score"
                showTitle="false"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        title="Section Scores"
                        titleUppercase="false"
                        showTitle="false"
                        visible="{apprisalData>oScrSEScr}"
                    >
                        <VBox class="sapUiSmallMarginBottom">
                            <OverflowToolbar>
                                <Title text="Section Scores" />
                            </OverflowToolbar>
                            <Table
                                id="sectionSecore"
                                items="{
									path : 'PreDefineGoal>/OverallScore/Section_Score'
								}"
                            >
                                <columns>
                                    <Column width="50%">
                                        <Text text="Sections" />
                                    </Column>
                                    <Column >
                                        <Text text="Appraisee" />
                                    </Column>
                                    <Column >
                                        <Text text="Appraiser" />
                                    </Column>
                                    <Column >
                                        <Text text="Reviewer" />
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem vAlign="Top">
                                        <cells>
                                            <HBox>
                                                <Link
                                                    text="{PreDefineGoal>Section}"
                                                    visible="{PreDefineGoal>link}"
                                                    press="handlePopoverPress"
                                                    ariaHasPopup="Dialog"
                                                    
                                                />
                                                <Text text="{PreDefineGoal>Section}" visible="{PreDefineGoal>text}"/>
                                            </HBox>
                                            <Input
                                                value="{PreDefineGoal>Appraisee}"
                                                editable="false"
                                                width="60px"
                                            />
                                            <Input
                                                value="{PreDefineGoal>Appraiser}"
                                                editable="false"
                                                width="60px"
                                            />
                                            <Input
                                                value="{PreDefineGoal>Reviewer}"
                                                editable="false"
                                                width="60px"
                                            />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection
                titleUppercase="false"
                title="Score"
                showTitle="false"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        title="360 Degree Score Report"
                        titleUppercase="false"
                        showTitle="false"
                        visible="{apprisalData>oScr360}"
                    >
                        <VBox class="sapUiSmallMarginBottom">
                            <OverflowToolbar>
                                <Title text="360 Degree Score Report" />
                            </OverflowToolbar>
                            <Table id="360DegreeScore">
                                <columns>
                                    <Column width="10rem">
                                        <Text text="Score" />
                                    </Column>
                                    <Column>
                                        <Text text="Report Link" />
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem>
                                        <cells>
                                            <Text
                                                text="{PreDefineGoal>/OverallScore/360_Degree_Score_Report/Score}"
                                            />
                                            <Link
                                                text="{PreDefineGoal>/OverallScore/360_Degree_Score_Report/Report_Link}"
                                                href="{PreDefineGoal>/OverallScore/360_Degree_Score_Report/Report_Link}"
                                                target="_blank"
                                            />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection
                titleUppercase="false"
                title="Score"
                showTitle="false"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        title="Section Scores"
                        titleUppercase="false"
                        showTitle="false"
                        visible="{apprisalData>oScores}"
                    >
                        <VBox class="sapUiSmallMarginBottom">
                            <OverflowToolbar>
                                <Title text="Overall Score" />
                                  <Button
                                    icon="sap-icon://information"
                                    type="Transparent"
                                    press="onClickScoreInfo"
                                    ariaLabelledBy="actionButtonLabel"
                                    class="sapUiSmallMarginEnd"
                                />
                            </OverflowToolbar>
                            <Table id="overallSecore">
                                <columns>
                                    <Column width="10rem">
                                        <Text text="Appraisee" />
                                    </Column>
                                    <Column width="10rem">
                                        <Text text="Appraiser" />
                                    </Column>
                                    <Column width="10rem">
                                        <Text text="Reviewer" />
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem vAlign="Top">
                                        <cells>
                                            <Input
                                                value="{PreDefineGoal>/OverallScore/Final_Score/Appraisee}"
                                                editable="false"
                                                width="60px"
                                            />
                                            <Input
                                                value="{PreDefineGoal>/OverallScore/Final_Score/Appraiser}"
                                                editable="false"
                                                width="60px"
                                            />
                                            <Input
                                                value="{PreDefineGoal>/OverallScore/Final_Score/Reviewer}"
                                                editable="false"
                                                width="60px"
                                            />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>

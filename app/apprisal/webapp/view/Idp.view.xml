<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="apprisal.controller.Idp"
    xmlns:uxap="sap.uxap"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    height="90%"
>
    <uxap:ObjectPageLayout upperCaseAnchorBar="false">
        <uxap:layoutData>
            <FlexItemData growFactor="1" />
        </uxap:layoutData>
        <uxap:sections>
            <uxap:ObjectPageSection
                title="Individual Development Plan"
                titleUppercase="false"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        title="Individual Development Plan"
                        titleUppercase="false"
                        showTitle="false"
                    >
                        <OverflowToolbar>
                            <Title text="Individual Development Plan" />
                            <ToolbarSpacer />
                            <Button
                                    icon="sap-icon://document-text"
                                    text="Guideline"
                                    type="Emphasized"
                                press="onClickGuideline"
                            />
                        </OverflowToolbar>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <uxap:ObjectPageSection
                titleUppercase="false"
                title="Score"
                showTitle="false"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        title="Trainings"
                        titleUppercase="false"
                        showTitle="false"
                    >
                        <VBox class="sapUiSmallMarginBottom">
                            <OverflowToolbar>
                                <Title text="Training attended in this performance Year" />
                            </OverflowToolbar>
                            <Table
                                id="bceIdenified"
                                items="{
									path : 'PreDefineGoal>/IDP/trainings_attended'
								}"
                            >
                            <infoToolbar>
								<OverflowToolbar>
									
                                    <Text text="Training Mandays Target: 5 Days (1 Day = 8hrs.)" class="sapUiSmallMarginEnd"/>
                                    <Text text="Training Mandays Actual: 6 Days 0 Hours 0 Minutes"/>
                                    
								</OverflowToolbar>
							</infoToolbar>
                                <columns>
                                    <Column width="5rem">
                                        <header>
                                            <Text text="S.No" />
                                        </header>
                                    </Column>
                                    <Column width="15rem">
                                        <header>
                                            <Text text="Training Name" />
                                        </header>
                                    </Column>
                                    <Column>
                                        <header>
                                            <Text text="Description" />
                                        </header>
                                    </Column>
                                    <Column width="8rem">
                                        <header>
                                            <Text text="No of Days" />
                                        </header>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem vAlign="Top">
                                        <cells>
                                            <Text text="{PreDefineGoal>S.N.}" />
                                            <Text
                                                text="{PreDefineGoal>Training Name}"
                                            />
                                            <Text
                                                text="{PreDefineGoal>Description}"
                                            />
                                            <Text
                                                text="{PreDefineGoal>No. of days}"
                                            />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <uxap:ObjectPageSection showTitle="false">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        title="Behavioral Competency"
                        titleUppercase="false"
                        showTitle="false"
                    >
                        <VBox class="sapUiSmallMarginBottom">
                            <OverflowToolbar>
                                <Title
                                    text="Behavioral Competency Development Area Identified"
                                />
                            </OverflowToolbar>
                            <Table
                                items="{
									path : 'PreDefineGoal>/IDP/Comps_Identified'
								}"
                            >
                                <columns>
                                    <Column width="5rem">
                                        <header>
                                            <Text text="S.No" />
                                        </header>
                                    </Column>
                                    <Column>
                                        <header>
                                            <Text text="Competencies Target" />
                                        </header>
                                    </Column>
                                    <Column>
                                        <header>
                                            <Text text="Success Measure" />
                                        </header>
                                    </Column>
                                    <Column>
                                        <header>
                                            <Text
                                                text="Review 1 Achievements"
                                            />
                                        </header>
                                    </Column>
                                    <Column>
                                        <header>
                                            <Text
                                                text="Review 2 Achievements"
                                            />
                                        </header>
                                    </Column>
                                    <Column>
                                        <header>
                                            <Text text="Annual Achievements" />
                                        </header>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem vAlign="Top">
                                        <cells>
                                            <Text text="{PreDefineGoal>S.No}" />
                                            <Text
                                                text="{PreDefineGoal>CMP_Target}"
                                            />
                                            <TextArea
                                                value="{PreDefineGoal>Success Measure}"
                                                width="100%"
                                                growing="true"
                                                editable="{apprisalData>idpBCDAEEditSM}"
                                            />
                                            <TextArea
                                                value="{PreDefineGoal>R1_Achievements}"
                                                width="100%"
                                                growing="true"
                                                editable="{apprisalData>idpBCDR1AREdit}"
                                            />
                                            <TextArea
                                                value="{PreDefineGoal>R2_Achievements}"
                                                width="100%"
                                                growing="true"
                                                editable="{apprisalData>idpBCDR2AREdit}"
                                            />
                                            <TextArea
                                                value="{PreDefineGoal>Annual_Achievements}"
                                                width="100%"
                                                growing="true"
                                                editable="{apprisalData>idpBCDANAREdit}"
                                            />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <uxap:ObjectPageSection
                titleUppercase="false"
                showTitle="false"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        title="Functional/Other"
                        titleUppercase="false"
                        showTitle="false"
                    >
                        <VBox class="sapUiSmallMarginBottom">
                            <OverflowToolbar>
                                <Title
                                    text="Functional/Any Other Development Area"
                                />
                            </OverflowToolbar>
                            <Table
                                items="{
									path : 'PreDefineGoal>/IDP/Other_Dev_Area'
								}"
                            >
                                <columns>
                                    <Column>
                                        <header>
                                            <Text text="Appraisee" />
                                        </header>
                                    </Column>
                                    <Column>
                                        <header>
                                            <Text text="Respond" />
                                        </header>
                                    </Column>
                                    <Column>
                                        <header>
                                            <Text text="Appraiser" />
                                        </header>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem vAlign="Top">
                                        <cells>
                                            <TextArea
                                                value="{PreDefineGoal>Appraisee}"
                                                width="100%"
                                                growing="true"
                                                editable="{apprisalData>idpFAODAAEEdit}"
                                            />
                                            
                                            <ComboBox selectedKey="" editable="{apprisalData>idpFAODAAREdit}" width="100%">
                                            <core:Item key="Accept" text="Accepted"></core:Item>
                                            <core:Item key="Reject" text="Rejected"></core:Item>
                                            </ComboBox>
                                            <Input
                                                editable="{apprisalData>idpFAODAAREdit}"
                                            />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <uxap:ObjectPageSection
                titleUppercase="false"
                showTitle="false"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        title="Functional/Techincal"
                        titleUppercase="false"
                        showTitle="false"
                    >
                        <VBox class="sapUiSmallMarginBottom">
                            <OverflowToolbar>
                                <Title
                                    text="Functional/Techincal Development Area"
                                />
                            </OverflowToolbar>
                            <Table
                                items="{
									path : 'PreDefineGoal>/IDP/Tech_Dev_Area'
								}"
                            >
                                <columns>
                                    <Column>
                                        <header>
                                            <Text text="Appraisee" />
                                        </header>
                                    </Column>
                                    <Column>
                                        <header>
                                            <Text text="Respond" />
                                        </header>
                                    </Column>
                                    <Column>
                                        <header>
                                            <Text text="Appraiser" />
                                        </header>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem vAlign="Top">
                                        <cells>
                                            <Input
                                                showValueHelp="true"
                                                value="{PreDefineGoal>Appraisee}"
                                                suggestionItems="{PreDefineGoal>/IDP/Tech_Dev_Area}"
                                                editable="{apprisalData>idpFTDAAEEdit}"
                                            >
                                                <suggestionItems>
                                                    <core:Item
                                                        text="{PreDefineGoal>Appraisee}"
                                                    />
                                                </suggestionItems>
                                            </Input>
                                            
                                            <ComboBox selectedKey="" editable="{apprisalData>idpFTDAAREdit}" width="100%">
                                            <core:Item key="Accept" text="Accepted"></core:Item>
                                            <core:Item key="Reject" text="Rejected"></core:Item>
                                            </ComboBox>
                                            <Input
                                                editable="{apprisalData>idpFTDAAREdit}"
                                            />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <uxap:ObjectPageSection
                titleUppercase="false"
                title="Score"
                showTitle="false"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        title="Four Monthly Reviews"
                        titleUppercase="false"
                        showTitle="false"
                        visible="{apprisalData>idpFMRS}"
                    >
                        <VBox class="sapUiSmallMarginBottom">
                            <OverflowToolbar>
                                <Title text="First Four Monthly Reviews" />
                            </OverflowToolbar>
                            <Table
                                id="idpFFMR"
                                items="{
									path : 'PreDefineGoal>/IDP/First_Four_Monthly_Review'
								}"
                            >
                                <columns>
                                    <Column>
                                        <Text text="Appraisee Remarks" />
                                    </Column>
                                    <Column>
                                        <Text text="Appraiser Remarks" />
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem vAlign="Top">
                                        <cells>
                                            <TextArea
                                                value="{PreDefineGoal>Remarks_Appraisee}"
                                                cols="2000"
                                                rows="5"
                                                editable="{apprisalData>idpSFMRSREAEEdit}"
                                            />
                                            <TextArea
                                                value="{PreDefineGoal>Remarks_Appraiser}"
                                                cols="2000"
                                                rows="5"
                                                editable="{apprisalData>idpSFMRSREAREdit}"
                                            />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <uxap:ObjectPageSection
                titleUppercase="false"
                title="Score"
                showTitle="false"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        title="Four Monthly Reviews"
                        titleUppercase="false"
                        showTitle="false"
                        visible="{apprisalData>idpFMRS}"
                    >
                        <VBox class="sapUiSmallMarginBottom">
                            <OverflowToolbar>
                                <Title text="Second Four Monthly Reviews" />
                            </OverflowToolbar>
                            <Table
                                id="idpSFMR"
                                items="{
									path : 'PreDefineGoal>/IDP/Second_Four_Monthly_Review'
								}"
                            >
                                <columns>
                                    <Column>
                                        <Text text="Appraisee Remarks" />
                                    </Column>
                                    <Column>
                                        <Text text="Appraiser Remarks" />
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem vAlign="Top">
                                        <cells>
                                            <TextArea
                                                value="{PreDefineGoal>Remarks_Appraisee}"
                                                cols="2000"
                                                rows="5"
                                                editable="{apprisalData>idpSFMRSREAEEdit}"
                                            />
                                            <TextArea
                                                value="{PreDefineGoal>Remarks_Appraiser}"
                                                cols="2000"
                                                rows="5"
                                                editable="{apprisalData>idpSFMRSREAREdit}"
                                            />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <uxap:ObjectPageSection
                titleUppercase="false"
                title="Score"
                showTitle="false"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        title="Annual Review"
                        titleUppercase="false"
                        showTitle="false"
                        visible="{apprisalData>idpANRS}"
                    >
                        <VBox class="sapUiSmallMarginBottom">
                            <OverflowToolbar>
                                <Title text="Annual Review" />
                            </OverflowToolbar>
                            <Table
                                id="idpAR"
                                items="{
									path : 'PreDefineGoal>/IDP/Annual_Review'
								}"
                            >
                                <columns>
                                    <Column>
                                        <header>
                                            <Text text=" Appraisee Remarks" />
                                        </header>
                                    </Column>
                                    <Column>
                                        <header>
                                            <Text text=" Appraiser Remarks" />
                                        </header>
                                    </Column>
                                    <Column>
                                        <header>
                                            <Text text=" Reviewer Remarks" />
                                        </header>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem vAlign="Top">
                                        <cells>
                                            <TextArea
                                                value="{PreDefineGoal>Remarks_Appraisee}"
                                                cols="2000"
                                                rows="5"
                                                editable="{apprisalData>idpANRSAEEdit}"
                                            />
                                            <TextArea
                                                value="{PreDefineGoal>Remarks_Appraiser}"
                                                cols="2000"
                                                rows="5"
                                                editable="{apprisalData>idpANRSAREdit}"
                                            />
                                            <TextArea
                                                value="{PreDefineGoal>Remarks_Reviewer}"
                                                cols="2000"
                                                rows="5"
                                                editable="{apprisalData>idpANRSREEdit}"
                                            />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <uxap:ObjectPageSection
                titleUppercase="false"
                title="Score"
                showTitle="false"
                visible="{apprisalData>idpANRS}"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        title="Average Annual Score"
                        titleUppercase="false"
                        showTitle="false"
                    >
                        <VBox class="sapUiSmallMarginBottom">
                            <OverflowToolbar>
                                <Title text="Average Annual Score" />
                            </OverflowToolbar>

                            <Table id="IDPAnnualScore">
                                <columns>
                                    <Column width="10rem">
                                        <Text text="Appraisee" />
                                    </Column>
                                    <Column width="10rem">
                                        <Text text="Appraiser" />
                                    </Column>
                                    <Column width="10rem">
                                        <Text text="Reviewer" />
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem vAlign="Top">
                                        <cells>
                                            <Input
                                                value="{PreDefineGoal>/IDP/Annual_Score/Scores/Score_Appraiser}"
                                                editable="false"
                                                width="8rem"
                                            />
                                            <Input
                                                value="{PreDefineGoal>/IDP/Annual_Score/Scores/Overal_Score}"
                                                editable="false"
                                                width="8rem"
                                            />
                                            <Input
                                                value="{PreDefineGoal>/IDP/Annual_Score/Scores/Score_Reviewer}"
                                                editable="false"
                                                width="8rem"
                                            />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>

<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="apprisal.controller.OverallRemarks"
    xmlns:uxap="sap.uxap"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    height="90%"
>
    <uxap:ObjectPageLayout upperCaseAnchorBar="false">
        <uxap:layoutData>
            <FlexItemData growFactor="1" />
        </uxap:layoutData>
        <uxap:sections>
            <!-- Target Setting -->

            <uxap:ObjectPageSection>
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        title="Target Setting"
                        titleUppercase="false"
                        showTitle="false"
                        visible="{apprisalData>overalRemarks}"
                    >
                        <VBox>
                            <OverflowToolbar>
                                <Title text="Target Setting" />
                                <ToolbarSpacer />
                            </OverflowToolbar>
                            <HBox
                                width="100%"
                                alignItems="Center"
                            >
                               
                                    <Label
                                        text="Time Spent in overall PMS Discussion"
                                    />
                                    <Button
                                        icon="sap-icon://information"
                                        type="Transparent"
                                        press="onInfoTimeSpentPress"
                                        ariaLabelledBy="actionButtonLabel"
                                        visible="{apprisalData>cofgaaAEE}"
                                    />
                                    <ComboBox
                                        items="{PreDefineGoal>/Overal_Remarks/Timeliness}"
                                        selectedKey="35"
                                        editable="{apprisalData>oRTSAREdit}"
                                    >
                                        <core:Item
                                            key="{PreDefineGoal>key}"
                                            text="{PreDefineGoal>text}"
                                        />
                                    </ComboBox>
                              
                            </HBox>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <!-- First Four Monthly Table   -->

            <uxap:ObjectPageSection
                        title="First Four Monthly"
                        titleUppercase="false"
                        showTitle="false"
                        visible="{apprisalData>oRFFMR}"
            
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        title="First Four Monthly"
                        titleUppercase="false"
                        showTitle="false"
                        visible="{apprisalData>oRFFMR}"
                    >
                        <VBox>
                            <OverflowToolbar>
                                <Title text="First Four Monthly Remarks" />
                                <ToolbarSpacer />
                            </OverflowToolbar>

                            <!-- First Four Month Table Start-->

                            <Table
                                id="OrFfmTable"
                                items="{
									path : 'PreDefineGoal>/Overal_Remarks/First_Four_Monthly_Remarks',	
									templateShareable: false
									
								}"
                            >
                                <columns>
                                    <Column>
                                        <header>
                                            <Text
                                                text="Appraisee Achievement"
                                            />
                                        </header>
                                    </Column>
                                    <Column>
                                        <header>
                                            <Text text="Appraiseer Feedback" />
                                        </header>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem vAlign="Top">
                                        <cells>
                                            <TextArea
                                                value="{PreDefineGoal>Appraisee_Achievement}"
                                                placeholder="Appraisee Achievement"
                                                editable="{apprisalData>oRFFMRAEEdit}"
                                                width="100%"
                                            />
                                            <TextArea
                                                value="{PreDefineGoal>Appraiser_Feedback}"
                                                placeholder="Appraiser Feedback"
                                                editable="{apprisalData>oRFFMRAREdit}"
                                                width="100%"
                                            />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                            <HBox
                                width="100%"
                                alignItems="Center"
                                justifyContent="SpaceBetween"
                            >
                                <HBox
                                    alignItems="Center"
                                    class="sapUiSmallMarginTop"
                                >
                                    <Label
                                        text="Time Spent in overall PMS Discussion"
                                    />
                                    <Button
                                        icon="sap-icon://information"
                                        type="Transparent"
                                        press="onInfoTimeSpentPress"
                                        ariaLabelledBy="actionButtonLabel"
                                        visible="{apprisalData>cofgaaAEE}"
                                    />
                                    <ComboBox
                                        items="{PreDefineGoal>/Overal_Remarks/Timeliness}"
                                        selectedKey="35"
                                        editable="{apprisalData>oRFFMRAREdit}"
                                    >
                                        <core:Item
                                            key="{PreDefineGoal>key}"
                                            text="{PreDefineGoal>text}"
                                        />
                                    </ComboBox>
                                </HBox>

                                <HBox
                                    alignItems="Center"
                                    class="sapUiSmallMarginTop"
                                >
                                    <Label
                                        text="Overall Performance Feedback Appraiser"
                                        class="sapUiSmallMarginEnd"
                                    />
                                    <Select
                                        width="200px"
                                        editable="{apprisalData>oRFFMRAREdit}"
                                    >
                                        <items>
                                            <core:Item
                                                key="Needs Improvement"
                                                text="Needs Improvement"
                                            />
                                            <core:Item
                                                key="Acceptable Performance"
                                                text="Acceptable Performance"
                                            />
                                        </items>
                                    </Select>
                                </HBox>
                            </HBox>

                            <!-- First Four Month Table End -->
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <!-- Second Four Monthly Table   -->

            <uxap:ObjectPageSection
                titleUppercase="false"
                title="Second Four Monthly"
                showTitle="false"
                visible="{apprisalData>oRSFMR}"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        title="Second Four Monthly"
                        titleUppercase="false"
                        showTitle="false"
                        visible="{apprisalData>oRSFMR}"
                    >
                        <VBox>
                            <OverflowToolbar>
                                <Title text="Second Four Monthly Remarks" />
                                <ToolbarSpacer />
                            </OverflowToolbar>

                            <Table
                                id="OrSfmTable"
                                items="{
									path : 'PreDefineGoal>/Overal_Remarks/Second_Four_Monthly_Remarks',	
									templateShareable: false
									
								}"
                            >
                                <columns>
                                    <Column>
                                        <header>
                                            <Text
                                                text="Appraisee Achievement"
                                            />
                                        </header>
                                    </Column>
                                    <Column>
                                        <header>
                                            <Text text="Appraiseer Feedback" />
                                        </header>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem vAlign="Top">
                                        <cells>
                                            <TextArea
                                                value="{PreDefineGoal>Appraisee_Achievement}"
                                                placeholder="Appraisee Achievement"
                                                editable="{apprisalData>oRSFMRAEEdit}"
                                                width="100%"
                                            />
                                            <TextArea
                                                value="{PreDefineGoal>Appraiser_Feedback}"
                                                placeholder="Appraiser Feedback"
                                                editable="{apprisalData>oRSFMRAREdit}"
                                                width="100%"
                                            />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                            <HBox
                                width="100%"
                                alignItems="Center"
                                justifyContent="SpaceBetween"
                            >
                                <HBox
                                    alignItems="Center"
                                    class="sapUiSmallMarginTop"
                                >
                                    <Label
                                        text="Time Spent in overall PMS Discussion"
                                    />
                                    <Button
                                        icon="sap-icon://information"
                                        type="Transparent"
                                        press="onInfoTimeSpentPress"
                                        ariaLabelledBy="actionButtonLabel"
                                        visible="{apprisalData>cofgaaAEE}"
                                    />
                                    <ComboBox
                                        items="{PreDefineGoal>/Overal_Remarks/Timeliness}"
                                        selectedKey="35"
                                        editable="{apprisalData>oRSFMRAREdit}"
                                    >
                                        <core:Item
                                            key="{PreDefineGoal>key}"
                                            text="{PreDefineGoal>text}"
                                        />
                                    </ComboBox>
                                </HBox>

                                <HBox
                                    alignItems="Center"
                                    class="sapUiSmallMarginTop"
                                >
                                    <Label
                                        text="Overall Performance Feedback Appraiser"
                                        class="sapUiSmallMarginEnd"
                                    />
                                    <Select
                                        width="200px"
                                        editable="{apprisalData>oRSFMRAREdit}"
                                    >
                                        <items>
                                            <core:Item
                                                key="Needs Improvement"
                                                text="Needs Improvement"
                                            />
                                            <core:Item
                                                key="Acceptable Performance"
                                                text="Acceptable Performance"
                                            />
                                        </items>
                                    </Select>
                                </HBox>
                            </HBox>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <!-- Annual Remarks Table   -->

            <uxap:ObjectPageSection
                titleUppercase="false"
                title="Annual Remarks"
                showTitle="false"
                visible="{apprisalData>oRANR}"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        title="Annual Remarks"
                        titleUppercase="false"
                        showTitle="false"
                    >
                        <VBox>
                            <OverflowToolbar>
                                <Title text="Annual Remarks" />
                                <ToolbarSpacer />
                            </OverflowToolbar>

                            <Table
                                id="OrAnRTable"
                                items="{
									path : 'PreDefineGoal>/Overal_Remarks/Annual_Remarks',	
									templateShareable: false
									
								}"
                            >
                                <columns>
                                    <Column>
                                        <header>
                                            <Text
                                                text="Appraisee Achievement"
                                            />
                                        </header>
                                    </Column>
                                    <Column>
                                        <header>
                                            <Text text="Appraiseer Feedback" />
                                        </header>
                                    </Column>
                                    <Column>
                                        <header>
                                            <Text text="Reviewer Feedback" />
                                        </header>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem vAlign="Top">
                                        <cells>
                                            <TextArea
                                                value="{PreDefineGoal>Appraisee_Achievement}"
                                                placeholder="Appraisee Achievement"
                                                editable="{apprisalData>oRANRRAEEdit}"
                                                width="100%"
                                            />
                                            <TextArea
                                                value="{PreDefineGoal>Appraiser_Feedback}"
                                                placeholder="Appraiser Feedback"
                                                editable="{apprisalData>oRANRRAREdit}"
                                                width="100%"
                                            />
                                            <TextArea
                                                value="{PreDefineGoal>Reviewer_Feedback}"
                                                placeholder="Reviewer Feedback"
                                                editable="{apprisalData>oRANRRREEdit}"
                                                width="100%"
                                            />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                            <HBox
                                width="100%"
                                alignItems="Center"
                                justifyContent="SpaceBetween"
                            >
                                <HBox
                                    alignItems="Center"
                                    class="sapUiSmallMarginTop"
                                >
                                    <Label
                                        text="Time Spent in overall PMS Discussion"
                                    />
                                    <Button
                                        icon="sap-icon://information"
                                        type="Transparent"
                                        press="onInfoTimeSpentPress"
                                        ariaLabelledBy="actionButtonLabel"
                                        visible="{apprisalData>cofgaaAEE}"
                                    />
                                    <ComboBox
                                        items="{PreDefineGoal>/Overal_Remarks/Timeliness}"
                                        selectedKey="35"
                                        editable="{apprisalData>oRANRRAREdit}"
                                    >
                                        <core:Item
                                            key="{PreDefineGoal>key}"
                                            text="{PreDefineGoal>text}"
                                        />
                                    </ComboBox>
                                </HBox>

                                <HBox
                                    alignItems="Center"
                                    class="sapUiSmallMarginTop"
                                >
                                    <Label
                                        text="Score - Reviewer"
                                        class="sapUiSmallMarginEnd"
                                    />
                                    <Input
                                        value="3.4"
                                        editable="{apprisalData>oRANRRREEdit}"
                                    />
                                </HBox>
                            </HBox>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>

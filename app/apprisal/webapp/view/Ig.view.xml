                            />
							<TextArea
                                width="100%"
                                value="{apprisalData>ig_target_value}"
                                growing="true"
                                class="sapUiSmallMarginBottom"
                                editable="{apprisalData>ig_target_edit}"
                            />
						</VBox>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
			<uxap:ObjectPageSection
                titleUppercase="false"
                title="3"
                showTitle="false"
            >
				<uxap:subSections>
					<uxap:ObjectPageSubSection titleUppercase="false">
						<VBox>
                            <OverflowToolbar>
								<Title text="3 Key Performance Area"/>
								<ToolbarSpacer />
							</OverflowToolbar>
							<HBox alignItems="Center" class="sapUiSmallMarginTop">
								<Label
                                    text="Weightage(%):"
                                    labelFor="COF_11_WEIGTAGE"
                                />
								<ComboBox
                                    items="{/numbers}"
                                    value="5"
                                >
									<core:Item
                                        key="{key}"
                                        text="{text}"
                                    />
								</ComboBox>
							</HBox>
							<Label
                                text="Key Strategic Priority - Key Results Area"
                                class="sapUiSmallMarginTop"
                            />
							<TextArea
                                width="100%"
                                value="{apprisalData>ig_ksp_value}"
                                growing="true"
                                class="sapUiSmallMarginBottom"
                                editable="{apprisalData>ig_ksp_edit}"
                            />
							<Label

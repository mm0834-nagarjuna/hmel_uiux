                            />
                            <TextArea
                                width="100%"
                                value="{apprisalData>ig_kpi_value}"
                                growing="true"
                                class="sapUiSmallMarginBottom"
                                editable="{apprisalData>ig_kpi_edit}"
                            />
                            <Label
                                text="Target"
                                class="sapUiSmallMarginTop"
                            />
                            <TextArea
                                width="100%"
                                value="{apprisalData>ig_target_value}"
                                growing="true"
                                class="sapUiSmallMarginBottom"
                                editable="{apprisalData>ig_target_edit}"
                            />
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection
                titleUppercase="false"
                title="2.3"
            >

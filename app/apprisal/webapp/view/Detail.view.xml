<mvc:View
    controllerName="apprisal.controller.Detail"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:uxap="sap.uxap"
	xmlns="sap.m"
	xmlns:tnt="sap.tnt"
	xmlns:blockcolor="project1.SharedBlocks"
	xmlns:l="sap.ui.layout"
    height="100%"
 >
	<VBox>
		<!-- <Text text="{CustomData>/key}"/> -->
		<Toolbar class="sapUiContentPadding">
            <Button icon="sap-icon://nav-back" visible="{PreDefineGoal>/gen/nav_back_visible}"/>
            <Button
                icon="sap-icon://menu2"
                type="Transparent"
                press="onSideNavigationExpandMobile" 
                visible="{PreDefineGoal>/gen/menu_visible}"
            />
            <Button text="Save" visible="{apprisalData>onlySaveOption}" type="Emphasized"/>
            <Button text="Refer Back to Appraisee" visible="{apprisalData>referBackToEmployee}" type="Emphasized"/>
			<Button text="Target Revision Required" visible="{apprisalData>targetRevisionRequired}" type="Emphasized"/>
			<Button text="Allow Target Revision" visible="{apprisalData>allowTargetRevision}" type="Emphasized"/>
			<Button text="Don't Allow Target Revision" visible="{apprisalData>doNotAllowTargetRevision}" type="Emphasized"/>
			<Button text="Refer Back To Appraiser" visible="{apprisalData>referBackToAppraiser}" type="Emphasized"/>
			<Button text="Submit" visible="{apprisalData>submit}" press=".onClickSubmit" type="Emphasized"/>
            <Text text="|" class="mvnButtonSepeartor" />
			<Button text="Print" type="Emphasized" />
		</Toolbar>
		<HBox
            backgroundDesign="Solid"
            columnGap="1rem"
            class="sapUiContentPadding"
            visible="{= !${device>/browser/mobile} }"
        >
            <ObjectStatus
                title="BSM"
                text="2025-26"
            />
            <ObjectStatus
                title="Status"
                text="{parts: [{path: 'apprisalData>apStatusName'}, {path: 'apprisalData>apStatusSubName'}], formatter: '.formatStatusText'}"
                state="Warning"
            />
            <ObjectStatus
                title="Employee ID"
                text="{apprisalData>appraiseeId}"
            />
			<ObjectStatus
                title="Employee Name"
                text="{apprisalData>appraiseeName}"
            />
            <ObjectStatus
                title="Designation"
                text="Sales Manager"
            />
			<ObjectStatus
                title="Department"
                text="PI DFA GD Programs and Product"
            />
			<ObjectStatus
                title="Email"
                text="email@address.com"
            />
			
		</HBox>
	</VBox>
	<SplitContainer
        id="SplitContDemo"
        initialDetail="apprisal.view.Idp"
        initialMaster="detailDetail"
    >
		<masterPages>
			<Page
                id="detailDetail"
                navButtonPress=".onPressDetailBack"
                showHeader="{= !${device>/browser/mobile} }"
            >
				<customHeader>
					<OverflowToolbar visible="{= !${device>/browser/mobile} }">
						<Button
                            icon="sap-icon://menu2"
                            type="Transparent"
                            press="onSideNavigationExpand"
                        />
					</OverflowToolbar>
				</customHeader>
				<tnt:SideNavigation
                    id="sideNavigation"
                    selectedKey="apprisal.view.Cof"
                    expanded="true"
                    class="mvnSideNavigation"
                    itemSelect="onSideNavigationItemSelect"
                >
					<tnt:NavigationList>
                        <tnt:NavigationListItem
                            text="Appraisee Details"
                            icon="sap-icon://business-card"
                            selectable="true"
                            key="apprisal.view.Gen"
                            visible="{device>/browser/mobile}"
                        />
						<tnt:NavigationListItem
                            text="Goals"
                            icon="sap-icon://target-group"
                            selectable="false"
                        >
							<tnt:NavigationListItem
                                text="Common Organizational"
                                key="apprisal.view.Cof"
                                visible="{apprisalData>coFg}"
                            />
							<tnt:NavigationListItem
                                text="Individual"
                                key="apprisal.view.Ig"
                                visible="{apprisalData>iG}"
                            />
                        </tnt:NavigationListItem>
						<tnt:NavigationListItem
                            text="Behavioral Competency Framework"
                            icon="sap-icon://kpi-managing-my-area"
                            selectable="true"
                            key="apprisal.view.Bcf"
                            visible="{apprisalData>bcf}"
                        />
						<tnt:NavigationListItem
                            text="Individual Development Plan"
                            icon="sap-icon://learning-assistant"
                            selectable="true"
                            key="apprisal.view.Idp"
                            visible="{apprisalData>idp}"
                        />
						<tnt:NavigationListItem
                            text="Appraiser/Reviewer/HOD Scorecard"
                            icon="sap-icon://collaborate"
                            selectable="true"
                            key="apprisal.view.Scorecard"
                        />
						<tnt:NavigationListItem
                            text="Summary"
                            icon="sap-icon://activity-items"
                            selectable="false"
                            visible="{apprisalData>summary}"
                        >
							<tnt:NavigationListItem
                                text="Accomplishments"
                                key="apprisal.view.Accomp"
                                visible="{apprisalData>accomp}"
                            />
							<tnt:NavigationListItem
                                text="Overall Remarks"
                                key="apprisal.view.OverallRemarks"
                                visible="{apprisalData>overalRemarks}"
                            />
							<tnt:NavigationListItem
                                text="Acknowledgement"
                                key="apprisal.view.Ack"
                                visible="{apprisalData>acknowledgement}"
                            />
							<tnt:NavigationListItem
                                text="Overall Score"
                                key="apprisal.view.OveralScore"
                                visible="{apprisalData>overallScore}"
                            />
                        </tnt:NavigationListItem>
					</tnt:NavigationList>
				</tnt:SideNavigation>
			</Page>
		</masterPages>
		<detailPages>
            
			<mvc:XMLView
                viewName="apprisal.view.Cof"
                id="apprisal.view.Cof"
            />
			<mvc:XMLView
                viewName="apprisal.view.Ig"
                id="apprisal.view.Ig"
            />
			<mvc:XMLView
                viewName="apprisal.view.Bcf"
                id="apprisal.view.Bcf"
            />
			<mvc:XMLView
                viewName="apprisal.view.Idp"
                id="apprisal.view.Idp"
            />
			<mvc:XMLView
                viewName="apprisal.view.Scorecard"
                id="apprisal.view.Scorecard"
            />
			<mvc:XMLView
                viewName="apprisal.view.Accomp"
                id="apprisal.view.Accomp"
            />
            <mvc:XMLView
                viewName="apprisal.view.OverallRemarks"
                id="apprisal.view.OverallRemarks"
            />
			<mvc:XMLView
                viewName="apprisal.view.Ack"
                id="apprisal.view.Ack"
            />
            <mvc:XMLView
                viewName="apprisal.view.OveralScore"
                id="apprisal.view.OveralScore"
            />

            <mvc:XMLView
                viewName="apprisal.view.Gen"
                id="apprisal.view.Gen"
            />
		</detailPages>
	</SplitContainer>
</mvc:View>



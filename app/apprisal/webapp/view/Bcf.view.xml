<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="apprisal.controller.Bcf"
    xmlns:uxap="sap.uxap"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt"
    xmlns:l="sap.ui.layout"
    height="90%"
>
    <uxap:ObjectPageLayout upperCaseAnchorBar="false">
        <uxap:layoutData>
            <FlexItemData growFactor="1" />
        </uxap:layoutData>
        <uxap:sections>
            <uxap:ObjectPageSection
                titleUppercase="false"
                title="Behavioral Competency Framework "
                showTitle="false"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        title="Competencies"
                        titleUppercase="false"
                        showTitle="false"
                    >
                        <VBox class="sapUiSmallMarginBottom">
                            <OverflowToolbar>
                                <Title text="Competencies" />
                                <Text
                                    text="(Select minimum 1 or maximum 2 Competencies)"
                                />
                                <ToolbarSpacer />
                                <Button
                                    text="Guideline"
                                    type="Emphasized"
                                    press="onClickGuideline"
                                />
                            </OverflowToolbar>
                            <!-- Competencies Table -->
                            <Table
                                id="BcfTable"
                                items="{
									path : 'PreDefineGoal>/BCE/Competencies',	
									templateShareable: false
									
								}"
                            >
                                <columns>
                                    <Column width="4rem">
                                        <header>
                                            <Text text="Select" />
                                        </header>
                                    </Column>
                                    <Column width="10rem">
                                        <header>
                                            <Text text="Competency" />
                                        </header>
                                    </Column>
                                    <Column>
                                        <header>
                                            <Text text="Indicator" />
                                        </header>
                                    </Column>
                                    <Column>
                                        <header>
                                            <Text text="Definition" />
                                        </header>
                                    </Column>
                                    <Column visible="{apprisalData>bcfANR}">
                                        <header>
                                            <Text text="Appraisee Score" />
                                        </header>
                                    </Column>
                                    <Column visible="{apprisalData>bcfANR}">
                                        <header>
                                            <Text text="Appraiser Score" />
                                        </header>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem vAlign="Top">
                                        <cells>
                                            <CheckBox editable="{apprisalData>bcfTabEdit}"/>
                                            <Text
                                                text="{PreDefineGoal>COMP_DESC}"
                                            />
                                            <Text
                                                text="{PreDefineGoal>INDICATORS}"
                                            />
                                            <Text
                                                text="{PreDefineGoal>COMP_DEF}"
                                            />
                                            <HBox visible="{apprisalData>bcfANR}">
                                                <Input
                                                    value="{PreDefineGoal>Appraisee_Score}"
                                                    type="Number"
                                                    placeholder="Appraisee Score"
                                                    editable="{apprisalData>bcfANRAEEdit}"
                                                    width="90%"
                                                />
                                                <Button
                                                    icon="sap-icon://information"
                                                    type="Transparent"
                                                    press="onClickScoreInfo"
                                                    ariaLabelledBy="actionButtonLabel"
                                                />
                                            </HBox>
                                            <Input
                                                value="{PreDefineGoal>Appraisee_Score}"
                                                type="Number"
                                                placeholder="Appraisee Score"
                                                visible="{apprisalData>bcfANR}"
                                                editable="{apprisalData>bcfANRAREdit}"
                                            />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <!-- Firs Four Monthly Review -->

            <uxap:ObjectPageSection
                titleUppercase="false"
                title="First Four Monthly Review"
                showTitle="false"
                visible="{apprisalData>bcfFFMR}"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        title="First Four Monthly Review"
                        titleUppercase="false"
                        showTitle="false"
                    >
                        <VBox class="sapUiSmallMarginBottom">
                            <OverflowToolbar>
                                <Title text="First Four Monthly Review" />
                            </OverflowToolbar>
                            <HBox columnGap="2rem">
                                <VBox>
                                    <Label
                                        text="BCF Remarks-Appraisee"
                                        class="sapUiSmallMarginTop"
                                    />
                                    <TextArea
                                        width="100%"
                                        value="BCF Remarks-Appraisee"
                                        growing="true"
                                        class="sapUiSmallMarginBottom"
                                        editable="{apprisalData>bcfFFRAEEdit}"
                                    />
                                </VBox>
                                <VBox>
                                    <Label
                                        text="BCF Remarks-Appraiser"
                                        class="sapUiSmallMarginTop"
                                    />
                                    <TextArea
                                        width="100%"
                                        value="BCF Remarks-Appraiser"
                                        growing="true"
                                        class="sapUiSmallMarginBottom"
                                        editable="{apprisalData>bcfFFRAREdit}"
                                    />
                                </VBox>
                            </HBox>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <!-- Second Four Monthly Review -->

            <uxap:ObjectPageSection
                titleUppercase="false"
                title="Second Four Monthly Review "
                showTitle="false"
                visible="{apprisalData>bcfSFMR}"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        title="Second Four Monthly Review"
                        titleUppercase="false"
                        showTitle="false"
                    >
                        <VBox>
                            <OverflowToolbar>
                                <Title text="Second Four Monthly Review" />
                            </OverflowToolbar>
                            <HBox columnGap="2rem">
                                <VBox>
                                    <Label
                                        text="BCF Remarks-Appraisee"
                                        class="sapUiSmallMarginTop"
                                    />
                                    <TextArea
                                        width="100%"
                                        value="BCF Remarks-Appraisee"
                                        growing="true"
                                        class="sapUiSmallMarginBottom"
                                        editable="{apprisalData>bcfSFRAEEdit}"
                                    />
                                </VBox>
                                <VBox>
                                    <Label
                                        text="BCF Remarks-Appraiser"
                                        class="sapUiSmallMarginTop"
                                    />
                                    <TextArea
                                        width="100%"
                                        value="BCF Remarks-Appraiser"
                                        growing="true"
                                        class="sapUiSmallMarginBottom"
                                        editable="{apprisalData>bcfSFRAREdit}"

                                    />
                                </VBox>
                            </HBox>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <!-- Annual Review    -->

            <uxap:ObjectPageSection
                titleUppercase="false"
                title="Annual Review "
                showTitle="false"
                visible="{apprisalData>bcfANR}"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        title="Annual Review"
                        titleUppercase="false"
                        showTitle="false"
                    >
                        <VBox>
                            <OverflowToolbar>
                                <Title text="Annual Review" />
                            </OverflowToolbar>
                            <HBox columnGap="2rem">
                                <VBox>
                                    <Label
                                        text="BCF Remarks-Appraisee"
                                        class="sapUiSmallMarginTop"
                                    />
                                    <TextArea
                                        width="100%"
                                        value="BCF Remarks-Appraisee"
                                        growing="true"
                                        class="sapUiSmallMarginBottom"
                                        editable="{apprisalData>bcfANRAEEdit}"
                                    />
                                </VBox>
                                <VBox>
                                    <Label
                                        text="BCF Remarks-Appraiser"
                                        class="sapUiSmallMarginTop"
                                    />
                                    <TextArea
                                        width="100%"
                                        value="BCF Remarks-Appraiser"
                                        growing="true"
                                        class="sapUiSmallMarginBottom"
                                        editable="{apprisalData>bcfANRAREdit}"
                                    />
                                </VBox>
                                <VBox>
                                    <Label
                                        text="BCF Remarks-Reviewer"
                                        class="sapUiSmallMarginTop"
                                    />
                                    <TextArea
                                        width="100%"
                                        value="BCF Remarks-Reviewer"
                                        growing="true"
                                        class="sapUiSmallMarginBottom"
                                        editable="{apprisalData>bcfANRREREdit}"
                                    />
                                </VBox>
                            </HBox>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <!--Annual Score  -->

            <uxap:ObjectPageSection
                titleUppercase="false"
                title="Annual Score "
                showTitle="false"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        title="Annual Score"
                        titleUppercase="false"
                        showTitle="false"
                        visible="{apprisalData>bcfANSC}"

                    >
                        <VBox>
                            <OverflowToolbar>
                                <Title text="Annual Score" />
                                <Button
                                    icon="sap-icon://information"
                                    type="Transparent"
                                    press="onClickScoreInfo"
                                    ariaLabelledBy="actionButtonLabel"
                                />
                            </OverflowToolbar>
                            <HBox columnGap="2rem">
                                <HBox
                                    alignItems="Center"
                                    columnGap="0.5rem"
                                >
                                    <Label text="Score- Appraiser" />
                                    <Input
                                        value="5"
                                        type="Number"
                                        placeholder="Annual Score- Appraiser"
                                        editable="false"
                                    />
                                </HBox>
                                <HBox
                                    alignItems="Center"
                                    columnGap="0.5rem"
                                >
                                    <Label text="Overall Score" />
                                    <Input
                                        value="3"
                                        type="Number"
                                        placeholder="Annual Overall Score"
                                        editable="false"
                                    />
                                </HBox>
                                <HBox
                                    alignItems="Center"
                                    columnGap="0.5rem"
                                >
                                    <Label text="Score- Reviewer" />
                                    <Input
                                        value="5"
                                        type="Number"
                                        placeholder="Annual Reviewer Score"
                                        editable="true"
                                    />
                                </HBox>
                            </HBox>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>

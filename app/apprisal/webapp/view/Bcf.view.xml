<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="apprisal.controller.Bcf"
	xmlns:uxap="sap.uxap"
	xmlns="sap.m"
	xmlns:tnt="sap.tnt"
	xmlns:l="sap.ui.layout"
    height="90%">
	<uxap:ObjectPageLayout  upperCaseAnchorBar="false" >
		<uxap:layoutData>
			<FlexItemData growFactor="1" />
		</uxap:layoutData>
		<uxap:sections>
			<uxap:ObjectPageSection titleUppercase="false" title="Behavioral Competency Framework " showTitle="false">
				<uxap:subSections>
					<uxap:ObjectPageSubSection title="Behavioral Competency Framework" titleUppercase="false" showTitle="false">
						<VBox  class="sapUiLargeMarginBottom">
							<OverflowToolbar>
								<Title text="Behavioral Competency Framework"/>
								<Text text="(Select minimum 1 or maximum 2 Competencies)"/>
								<ToolbarSpacer />
								<Button
									text="Guideline"
									type="Emphasized"
									press="onClickPredefined"
								/>
							</OverflowToolbar>
							<Table id="BcfTable"
								items="{
									path : 'PreDefineGoal>/bce',
									
									templateShareable: false
									
								}">
								<columns>
									<Column width="4rem">
										<header>
											<Text text="Select" />
										</header>
									</Column>
									<Column width="10rem">
										<header>
											<Text text="Competency" />
										</header>
									</Column>
									<Column>
										<header>
											<Text text="Indicator" />
										</header>
									</Column>
									<Column>
										<header>
											<Text text="Definition" />
										</header>
									</Column>
									<Column>
										<header>
											<Text text="Appraisee Score" />
										</header>
									</Column>
									<Column>
										<header>
											<Text text="Appraiser Score" />
										</header>
									</Column>
								</columns>
								<items>
									<ColumnListItem vAlign="Top">
										<cells>
											<CheckBox />
											<Text text="{PreDefineGoal>COMP_DESC}" />
											<Text text="{PreDefineGoal>INDICATORS}" />
											<Text text="{PreDefineGoal>COMP_DEF}" />
											<Input value="{PreDefineGoal>Appraisee_Score}" type="Number" placeholder="Appraisee Score" />
											<Input value="{PreDefineGoal>Appraisee_Score}" type="Number" placeholder="Appraisee Score" />
										</cells>
									</ColumnListItem>
								</items>
							</Table>
						</VBox>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
		</uxap:sections>
	</uxap:ObjectPageLayout>
</mvc:View>
<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="apprisal.controller.Bcf"
    xmlns:uxap="sap.uxap"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt"
    xmlns:l="sap.ui.layout"
    height="90%"
>
    <uxap:ObjectPageLayout upperCaseAnchorBar="false">
        <uxap:layoutData>
            <FlexItemData growFactor="1" />
        </uxap:layoutData>
        <uxap:sections>
            <uxap:ObjectPageSection
                titleUppercase="false"
                title="Behavioral Competency Framework "
                showTitle="false"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        title="Competencies"
                        titleUppercase="false"
                        showTitle="false"
                    >
                        <VBox class="sapUiSmallMarginBottom">
                            <OverflowToolbar>
                                <Title text="Competencies" />
                                <Text
                                    text="(Select minimum 1 or maximum 2 Competencies)"
                                />
                                <ToolbarSpacer />
                                <Button
                                    text="Score Description"
                                    type="Emphasized"
                                    press="onClickScoreInfo"
                                    ariaLabelledBy="actionButtonLabel"
                                />
                                <Button
                                    text="Guideline"
                                    type="Emphasized"
                                    press="onClickGuideline"
                                />
                            </OverflowToolbar>
                            <!-- Competencies Table -->
                            <Table
                                id="BcfTable"
                                items="{
									path : 'PreDefineGoal>/BCE/Competencies',	
									templateShareable: false
									
								}"
                            >
                                <columns>
                                    <Column width="4rem">
                                        <header>
                                            <Text text="Select" />
                                        </header>
                                    </Column>
                                    <Column width="10rem">
                                        <header>
                                            <Text text="Competency" />
                                        </header>
                                    </Column>
                                    <Column>
                                        <header>
                                            <Text text="Indicator" />
                                        </header>
                                    </Column>
                                    <Column>
                                        <header>
                                            <Text text="Definition" />
                                        </header>
                                    </Column>
                                    <Column
                                        visible="{apprisalData>bcfANR}"
                                        width="5rem"
                                    >
                                        <header>
                                            <Text text="Appraisee Score" />
                                        </header>
                                    </Column>
                                    <Column
                                        visible="{apprisalData>bcfANR}"
                                        width="5rem"
                                    >
                                        <header>
                                            <Text text="Appraiser Score" />
                                        </header>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem vAlign="Top">
                                        <cells>
                                            <CheckBox
                                                editable="{apprisalData>bcfTabEdit}"
                                            />
                                            <Text
                                                text="{PreDefineGoal>COMP_DESC}"
                                            />
                                            <Text
                                                text="{PreDefineGoal>INDICATORS}"
                                            />
                                            <Text
                                                text="{PreDefineGoal>COMP_DEF}"
                                            />
                                            <HBox
                                                visible="{apprisalData>bcfANR}"
                                            >
                                                <Input
                                                    value="{PreDefineGoal>Appraisee_Score}"
                                                    type="Number"
                                                    placeholder="Appraisee Score"
                                                    editable="{apprisalData>bcfANRAEEdit}"
                                                    width="90%"
                                                />
                                            </HBox>
                                            <Input
                                                value="{PreDefineGoal>Appraisee_Score}"
                                                type="Number"
                                                placeholder="Appraiser Score"
                                                visible="{apprisalData>bcfANR}"
                                                editable="{apprisalData>bcfANRAREdit}"
                                            />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <!-- First Four Monthly Review Table     -->

            <uxap:ObjectPageSection
                titleUppercase="false"
                title="First Four Monthly Review Remarks"
                showTitle="false"
                visible="{apprisalData>bcfFFMR}"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        title="First Four Monthly"
                        titleUppercase="false"
                        showTitle="false"
                    >
                        <VBox class="sapUiSmallMarginBottom">
                            <OverflowToolbar>
                                <Title
                                    text="First Four Monthly Review Remarks"
                                />
                                <ToolbarSpacer />
                            </OverflowToolbar>
                            <Table
                                id="BcfFFMRTable"
                                items="{
									path : 'PreDefineGoal>/BCE/First_Four_Monthly_Review',	
									templateShareable: false
									
								}"
                            >
                                <columns>
                                    <Column>
                                        <header>
                                            <Text text="Appraisee" />
                                        </header>
                                    </Column>
                                    <Column>
                                        <header>
                                            <Text text="Appraiseer" />
                                        </header>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem vAlign="Top">
                                        <cells>
                                            <TextArea
                                                value="{PreDefineGoal>Remarks_Appraisee_value}"
                                                placeholder="Appraisee Remarks"
                                                editable="{apprisalData>bcfFFRAEEdit}"
                                            />
                                            <TextArea
                                                value="{PreDefineGoal>Remarks_Appraiser_value}"
                                                placeholder="Appraiser Remarks"
                                                editable="{apprisalData>bcfFFRAREdit}"
                                            />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <!-- Second Four Monthly Review Table     -->

            <uxap:ObjectPageSection
                titleUppercase="false"
                title="First Four Monthly Review Remarks"
                showTitle="false"
                visible="{apprisalData>bcfSFMR}"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        title="Second Four Monthly"
                        titleUppercase="false"
                        showTitle="false"
                    >
                        <VBox class="sapUiSmallMarginBottom">
                            <OverflowToolbar>
                                <Title
                                    text="Second Four Monthly Review Remarks"
                                />
                                <ToolbarSpacer />
                            </OverflowToolbar>
                            <Table
                                id="BcfSFMRTable"
                                items="{
									path : 'PreDefineGoal>/BCE/Second_Four_Monthly_Review',	
									templateShareable: false
									
								}"
                            >
                                <columns>
                                    <Column>
                                        <header>
                                            <Text text="Appraisee" />
                                        </header>
                                    </Column>
                                    <Column>
                                        <header>
                                            <Text text="Appraiseer" />
                                        </header>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem vAlign="Top">
                                        <cells>
                                            <TextArea
                                                value="{PreDefineGoal>Remarks_Appraisee_value}"
                                                placeholder="Appraisee Remarks"
                                                editable="{apprisalData>bcfSFRAEEdit}"
                                            />
                                            <TextArea
                                                value="{PreDefineGoal>Remarks_Appraiser_value}"
                                                placeholder="Appraiser Remarks"
                                                editable="{apprisalData>bcfSFRAREdit}"
                                            />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <!-- Annual Review Table     -->

            <uxap:ObjectPageSection
                titleUppercase="false"
                title="Annual Review"
                showTitle="false"
                visible="{apprisalData>bcfANR}"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        title="Annual Review"
                        titleUppercase="false"
                        showTitle="false"
                    >
                        <VBox class="sapUiSmallMarginBottom">
                            <OverflowToolbar>
                                <Title text="Annual Review Remarks" />
                                <ToolbarSpacer />
                            </OverflowToolbar>
                            <Table
                                id="BcfANRTable"
                                items="{
									path : 'PreDefineGoal>/BCE/Annual_Review',	
									templateShareable: false
									
								}"
                            >
                                <columns>
                                    <Column>
                                        <header>
                                            <Text text="Appraisee" />
                                        </header>
                                    </Column>
                                    <Column>
                                        <header>
                                            <Text text="Appraiseer" />
                                        </header>
                                    </Column>
                                    <Column>
                                        <header>
                                            <Text text="Reviewer" />
                                        </header>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem vAlign="Top">
                                        <cells>
                                            <TextArea
                                                value="{PreDefineGoal>Remarks_Appraisee_value}"
                                                placeholder="Appraisee Remarks"
                                                editable="{apprisalData>bcfANRAEEdit}"
                                            />
                                            <TextArea
                                                value="{PreDefineGoal>Remarks_Appraiser_value}"
                                                placeholder="Appraiser Remarks"
                                                editable="{apprisalData>bcfANRAREdit}"
                                            />
                                            <TextArea
                                                value="{PreDefineGoal>Remarks_Reviewer_value}"
                                                placeholder="Appraiser Remarks"
                                                editable="{apprisalData>bcfANRREREdit}"
                                            />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <!-- Annual Score Table     -->

            <uxap:ObjectPageSection
                titleUppercase="false"
                title="Annual Score"
                showTitle="false"
                visible="{apprisalData>bcfANSC}"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        title="Annual Score"
                        titleUppercase="false"
                        showTitle="false"
                    >
                        <VBox class="sapUiSmallMarginBottom">
                            <OverflowToolbar>
                                <Title text="Annual Score" />
                                <Button
                                    icon="sap-icon://information"
                                    type="Transparent"
                                    press="onClickScoreInfo"
                                    ariaLabelledBy="actionButtonLabel"
                                />
                                <ToolbarSpacer />
                            </OverflowToolbar>
                            <Table
                                id="BcfANSTable"
                                items="{
									path : 'PreDefineGoal>/BCE/Annual_Score',	
									templateShareable: false
									
								}"
                            >
                                <columns>
                                    <Column>
                                        <header>
                                            <Text text="Appraisee" />
                                        </header>
                                    </Column>
                                    <Column>
                                        <header>
                                            <Text text="Appraiseer" />
                                        </header>
                                    </Column>
                                    <Column>
                                        <header>
                                            <Text text="Reviewer" />
                                        </header>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem vAlign="Top">
                                        <cells>
                                            <Input
                                                value="{PreDefineGoal>Overall_Appraisee_Score}"
                                                placeholder="Appraisee Score"
                                                editable="false"
                                            />
                                            <Input
                                                value="{PreDefineGoal>Overall_Appraiser_Score}"
                                                placeholder="Appraiser Score"
                                                editable="false"
                                            />
                                            <Input
                                                value="{PreDefineGoal>Overall_Reviewer_Score}"
                                                placeholder="Reviewer Score"
                                                editable="{apprisalData>bcfANRREREdit}"
                                            />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </VBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>

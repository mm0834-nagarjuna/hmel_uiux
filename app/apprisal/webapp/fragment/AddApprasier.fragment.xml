<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	
    <Dialog 
            title="Add Appraiser"
            contentHeight="auto"
            contentWidth="50%"
            class="sapUiLargePadding"
            >
            <HBox>
                <Input
                    textFormatMode="KeyValue"
                    placeholder="Enter product"
                    showSuggestion="true"
                    showValueHelp="true"
                    valueHelpRequest=".onValueHelpRequest"
                    suggestionItems="{/ProductCollection}"
                    suggestionItemSelected=".onSuggestionItemSelected">
                    <suggestionItems>
                        <core:ListItem
                            key="{ProductId}"
                            text="{Name}"
                            additionalText="{ProductId}" />
                    </suggestionItems>
                </Input>
                <Button icon="sap-icon://add" />
            </HBox>    
        

        <Table
            class="sapUiMediumPadding"
            items="{
			path : 'PreDefineGoal>/indv_goals'
		}"
            >
            
            <columns>
                <Column>
                    <header>
                        <Text text="Appraiser" />
                    </header>
                </Column>
            </columns>

            <items>
                <ColumnListItem vAlign="Top">
                    <cells>
                        <Text text="{PreDefineGoal>KRA}" />
                    </cells>
                </ColumnListItem>
            </items>

        </Table>
        

        <endButton>
            <Button text="Cancel" press=".onClickAddAppraiserCancel" type="Emphasized"/>
        </endButton>

    </Dialog>

</core:FragmentDefinition>

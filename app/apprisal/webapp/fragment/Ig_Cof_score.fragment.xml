<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog
        title="Value Description"
        id="idScoreInfoDialog"
        draggable="true"
        resizable="true"
        contentWidth="600px"
        contentHeight="auto"
        class="sapUiResponsivePadding">
        
        <Table
            id="idProductsTable"
            inset="false"
            items="{
                path: 'PreDefineGoal>/Ig_Cof_score'
            }">
            <columns>
                <Column width="30%">
                    <Text text="Evaluation" />
                </Column>
                <Column>
                    <Text text="Value Description" />
                </Column>
            </columns>
            <items>
                <ColumnListItem
                    vAlign="Middle"
                    type="Inactive">
                    <cells>
                        <Text text="{PreDefineGoal>Evaluation}" />
                        <Text text="{PreDefineGoal>Value_Description}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>

        <endButton>
            <Button text="Close" press=".onClickCancelScoreInfo" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="idBceScoreInfoDialog"
        title="Score Description"
        draggable="true"
        resizable="true"
        contentWidth="700px"
        contentHeight="auto"
        class="sapUiResponsivePadding"
    >
        <Table
            inset="false"
            items="{
                path: 'PreDefineGoal>/BCE/Score_Desc'
            }"
        >
            <columns>
                <Column>
                    <Text text="Score" />
                </Column>
                <Column>
                    <Text text="Value Description" />
                </Column>
            </columns>
            <items>
                <ColumnListItem
                    vAlign="Middle"
                    type="Inactive"
                >
                    <cells>
                        <ObjectIdentifier title="{PreDefineGoal>Score}" />
                        <ObjectIdentifier
                            title="{PreDefineGoal>Value_Description}"
                        />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>

        <endButton>
            <Button
                text="Close"
                press=".onClickCancelScoreInfo"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>

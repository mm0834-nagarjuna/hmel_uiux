<mvc:View
    xmlns:cards="sap.f.cards"
    controllerName="appraisaldashboard.controller.Dashboard"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:tnt="sap.tnt"
    xmlns:c="sap.ui.core"
    xmlns:t="sap.ui.table"
    xmlns:trm="sap.ui.table.rowmodes"
    xmlns:f="sap.ui.layout.form"
    xmlns:u="sap.ui.unified"
>
    <tnt:ToolHeader id="shellLikeToolHeaderOnlyMandatoryControls">
        <Image
            src="https://sapui5.hana.ondemand.com/test-resources/sap/tnt/images/SAP_Logo.png"
            decorative="false"
            tooltip="SAP Logo"
            width="60px"
            height="30px"
        >
            <layoutData>
                <OverflowToolbarLayoutData priority="NeverOverflow" />
            </layoutData>
        </Image>
        <Title
            text="{i18n>title}"
            wrapping="false"
        >
            <layoutData>
                <OverflowToolbarLayoutData priority="Disappear" />
            </layoutData>
        </Title>
        <ToolbarSpacer />
        <SearchField
            id="searchField"
            width="25rem"
        >
            <layoutData>
                <OverflowToolbarLayoutData
                    priority="Low"
                    group="1"
                />
            </layoutData>
        </SearchField>
        <ToolbarSpacer />
        <Avatar
            initials="SS"
            displaySize="XS"
            press=".onAvatarPressed"
            tooltip="Profile"
        >
            <layoutData>
                <OverflowToolbarLayoutData priority="NeverOverflow" />
            </layoutData>
        </Avatar>
    </tnt:ToolHeader>

    <IconTabBar
        id="idIconTabBar"
        select=".onFilterSelect"
        class="sapUiResponsiveContentPadding"
    >
        <items>
            <IconTabFilter
                text="Appraisee"
                key="AE"
            />
            <IconTabSeparator />
            <IconTabFilter
                text="Appraiser"
                key="AR"
            />
            <IconTabSeparator />
            <IconTabFilter
                text="Reviewer"
                key="RE"
            />
        </items>
        <content>
            <VBox>
                <HBox
                    width="8%"
                    alignItems="Center"
                    justifyContent="SpaceAround"
                    visible="{vModel>/bCurve}"
                >
                    <Button
                        text="Save"
                        type="Emphasized"
                    />
                    <Button
                        text="Submit"
                        type="Default"
                    />
                </HBox>
                <HBox
                    alignItems="Center"
                    justifyContent="SpaceBetween"
                >
                    <!-- Table 1 -->
                    <Table
                        id="normalTable"
                        inset="false"
                        headerText="Title Bar Here"
                        noDataText="No Data Available"
                        growing="true"
                        growingScrollToLoad="true"
                        items="{path: 'DashboardScore>/Bell_Curved_Distribustion'}"
                        width="30%"
                        class="sapUiSmallMargin"
                        visible="{vModel>/bCurve}"
                    >
                        <headerToolbar>
                            <OverflowToolbar>
                                <Title
                                    text="Rating Distribution as per Bell Curve"
                                />
                            </OverflowToolbar>
                        </headerToolbar>
                        <columns>
                            <Column width="8rem" vAlign="Middle" hAlign="Center">
                                <Text text="Start Date" />
                            </Column>
                            <Column width="8rem" vAlign="Middle" hAlign="Center">
                                <Text text="End Date" />
                            </Column>

                            <Column width="5rem" vAlign="Middle" hAlign="Center">
                                <Text text="FEE" />
                            </Column>
                            <Column width="5rem" vAlign="Middle" hAlign="Center">
                                <Text text="EE" />
                            </Column>
                            <Column width="5rem" vAlign="Middle" hAlign="Center">
                                <Text text="ME" />
                            </Column>
                            <Column width="5rem" vAlign="Middle" hAlign="Center" >
                                <Text text="BE" />
                            </Column>
                            <Column width="5rem" vAlign="Middle" hAlign="Center">
                                <Text text="DME" />
                            </Column>
                            <Column width="13rem" vAlign="Middle" hAlign="Center">
                                <Text text="Remarks" />
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem>
                                <cells>
                                    <Text text="01.04.2025" />
                                    <Text text="31.03.2026" />

                                    <Text text="{DashboardScore>FEE}" />
                                    <Text text="{DashboardScore>EEE}" />
                                    <Text text="{DashboardScore>ME}" />
                                    <Text text="{DashboardScore>BE}" />
                                    <Text text="{DashboardScore>DME}" />
                                    <ObjectIdentifier
                                        title="{DashboardScore>Rating}"
                                    />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </HBox>

                <!-- Table 3 -->
                <Table
                    id="normalTable3"
                    inset="false"
                    noDataText="No Data Available"
                    growing="true"
                    growingScrollToLoad="true"
                    items="{path: 'DashboardScore>/Appraisees'}"
                    width="auto"
                    class="sapUiSmallMarginBegin sapUiLargeMarginEnd"
                >
                    <headerToolbar>
                        <OverflowToolbar>
                            <HBox
                                width="100%"
                                alignItems="Center"
                                justifyContent="SpaceBetween"
                            >
                                <HBox width="50%" alignItems="Center">
                                <Label
                                    text="Select Year: "
                                    class="sapUiSmallMarginEnd"
                                />
                                <ComboBox selectedKey="TS"  selectionChange="onSelectChange" id="selectYear" >
                                 
                                    <c:Item
                                        key="TS"
                                        text="2025-26"
                                    />
                                    <c:Item
                                        key="TF"
                                        text="2024-25"
                                    />
                                    <c:Item
                                        key="TT"
                                        text="2023-24"
                                    />
                                </ComboBox>
                                </HBox>
                                <HBox width="50%" alignItems="Center" justifyContent="End" visible="{vModel>/filterVisible}">
                               <HBox alignItems="Center" class="sapUiSmallMarginEnd">
                               <Label text="Employee ID: " class="sapUiSmallMarginEnd"></Label>
                                <SearchField placeholder="Enter Employee ID"></SearchField>
                               </HBox>
                               <HBox alignItems="Center" >
                               <Label text="Employee Name: " class="sapUiSmallMarginEnd"></Label>
                                <SearchField placeholder="Enter Employee ID"></SearchField>
                               </HBox>
                                </HBox>
                            </HBox>
                            
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column width="5rem" >
                            <Text text="Employee ID" />
                        </Column>
                        <Column width="10rem">
                            <Text text="Employee Name" />
                        </Column>
                        <Column width="8rem" vAlign="Middle" hAlign="Center" >
                            <Text text="Appraisee Score" />
                        </Column>
                        <Column width="8rem" vAlign="Middle" hAlign="Center">
                            <Text text="Appraiser Score" />
                        </Column>
                        <Column width="8rem" vAlign="Middle" hAlign="Center">
                            <Text text="Reviewer Score" />
                        </Column>
                        <Column width="8rem" >
                            <Text text="Appraiser Rating" />
                        </Column>
                        
                        <Column width="8rem" >
                            <Text text="Reviewer Rating" />
                        </Column>
                        <Column width="10rem">
                            <Text text="Justification Attachment" />
                        </Column>
                        <Column width="8rem" >
                            <Text text="Final HOD Rating" />
                        </Column>
                        <Column width="8rem" vAlign="Middle" hAlign="Center">
                            <Text text="Appraiser Status" />
                        </Column>
                        <Column width="8rem" vAlign="Middle" hAlign="Center">
                            <Text text="Reviewer Status" />
                        </Column>
                    </columns>

                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text
                                    text="{DashboardScore>Pers.No.}"
                                    textAlign="Center"
                                />
                                <Text
                                    text="{DashboardScore>Name_of_Employee}"
                                    textAlign="Center"
                                />
                                <Text
                                    text="{DashboardScore>Overall_Apprse_Score}"
                                    textAlign="Center"
                                />
                                <Text
                                    text="{DashboardScore>Overall_Apprsr_Score}"
                                    textAlign="Center"
                                />
                                <Text
                                    text="{DashboardScore>Overall_Reviewer_Score}"
                                    textAlign="Center"
                                />

                                <HBox width="90%" alignItems="Center" justifyContent="Center">
                                <Text text="{DashboardScore>Appraiser_Rating}" visible="{= !${vModel>/inputEnable}}" ></Text>
                                    <ComboBox
                                        id="ArInput"
                                        editable="{vModel>/arRating}"
                                        showButton="true"
                                        items="{
					                    path: 'DashboardScore>/Suggestions'
				                           }"
                                        textAlign="Center"
                                        
                                        value="{DashboardScore>Appraiser_Rating}"
                                        visible="{vModel>/inputEnable}"
                                        selectionChange="onARRatingSelectChange"
                                    >
                                        <c:Item
                                            key="{DashboardScore>key}"
                                            text="{DashboardScore>value}"
                                        />
                                    </ComboBox>
                                </HBox>

                              
                                <HBox>
                                <Text text="{DashboardScore>Reviewer_Rating}" visible="{= !${vModel>/inputEnable}}"></Text>
                                    <ComboBox
                                        id="ReInput"
                                        editable="{vModel>/reRating}"
                                        showButton="true"
                                        items="{
					                    path: 'DashboardScore>/Suggestions'
				                           }"
                                        textAlign="Center"
                                        value="{DashboardScore>Reviewer_Rating}"
                                        visible="{vModel>/inputEnable}"
                                        selectionChange="onRERatingSelectChange"
                                        
                                    >
                                        <c:Item
                                            key="{DashboardScore>key}"
                                            text="{DashboardScore>value}"
                                        />
                                    </ComboBox>
                                </HBox>
                                  <HBox
                                    
                                 >
                                    <Text
                                        text="  "
                                        visible="{parts :[{path:'DashboardScore>Appraiser_Rating'}, {path:'DashboardScore>Reviewer_Rating'}], formatter: '.formatter.checkText'}"
                                    />

                                    <u:FileUploader
                                        id="fileUploaderAR"
                                        name="myFileUpload"
                                        uploadUrl="upload/"
                                        tooltip="Upload your file to the local server"
                                        uploadComplete="handleUploadComplete"
                                        visible="{parts :[{path:'DashboardScore>Appraiser_Rating'}, {path:'DashboardScore>Reviewer_Rating'}], formatter: '.formatter.checkText'}"
                                        enabled="{vModel>/attachEdit}"
                                    /> 
                                    
                                </HBox>

                                <Text  />
                                <Text
                                    text="{DashboardScore>Appraiser_Status}"
                                />
                                <Text text="{DashboardScore>Reviewer_Status}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>
    </IconTabBar>
</mvc:View>
